---
// ETF UNSA - Generic Accordion Item
// Author: Ernedin Zajko <ezajko@root.ba>

interface Props {
  id: string; // Unique ID for this item (e.g., "item-1")
  parent: string; // ID of the parent Accordion
  title: string;
  open?: boolean;
  class?: string;
}

const { id, parent, title, open = false, class: className } = Astro.props;
---

<div class={`accordion-item ${className || ''}`}>
  <h2 class="accordion-header" id={`heading-${id}`}>
    <button
      class={`accordion-button fw-bold ${!open ? 'collapsed' : ''}`}
      type="button"
      data-bs-toggle="collapse"
      data-bs-target={`#collapse-${id}`}
      aria-expanded={open}
      aria-controls={`collapse-${id}`}
    >
      {title}
    </button>
  </h2>
  <div
    id={`collapse-${id}`}
    class={`accordion-collapse collapse ${open ? 'show' : ''}`}
    aria-labelledby={`heading-${id}`}
    data-bs-parent={`#${parent}`}
  >
    <div class="accordion-body bg-white">
      <slot />
    </div>
  </div>
</div>
