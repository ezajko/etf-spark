interface Props {
  title?: string;
  subtitle?: string;
  image?: string;
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  overlay?: boolean;
  className?: string;
}

const {
  title,
  subtitle,
  image = '/images/banner-default.jpg', // Fallback image if needed
  size = 'sm',
  overlay = true,
  className = '',
} = Astro.props;

// Map size prop to modifier class
const sizeClass = size ? `banner-${size}` : '';
const overlayClass = !overlay ? 'banner-no-overlay' : '';
const bgImageStyle = image ? `background-image: url('${image}');` : '';
---

<div class:list={['banner', sizeClass, overlayClass, className]} style={bgImageStyle}>
  <div class="banner-content">
    {title && <h1 class="banner-title">{title}</h1>}
    {subtitle && <p class="banner-subtitle lead mb-0">{subtitle}</p>}
    <slot />
  </div>
</div>
