interface Props {
  title?: string;
  subtitle?: string;
  image?: string;
  size?: 'xs' | 's' | 'm' | 'l' | 'xl';
  overlay?: boolean;
  className?: string;
}

const { 
  title, 
  subtitle, 
  image = '/images/banner-default.jpg', // Fallback image if needed
  size = 's', 
  overlay = true,
  className = ''
} = Astro.props;

// Map size prop to BEM modifier class
const sizeClass = size ? `ez-banner--${size}` : '';
const overlayClass = !overlay ? 'ez-banner--no-overlay' : '';
const bgImageStyle = image ? `background-image: url('${image}');` : '';
---

<div class:list={['ez-banner', sizeClass, overlayClass, className]} style={bgImageStyle}>
  <div class="ez-banner__content">
    {title && <h1 class="ez-banner__title">{title}</h1>}
    {subtitle && <p class="ez-banner__subtitle lead mb-0">{subtitle}</p>}
    <slot />
  </div>
</div>
