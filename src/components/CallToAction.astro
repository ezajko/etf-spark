interface Props {
  title: string;
  description: string;
  actionLabel: string;
  actionUrl: string;
  variant?: 'light' | 'primary' | 'dark';
  centered?: boolean;
  height?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
  icon?: string;
}

const {
  title,
  description,
  actionLabel,
  actionUrl,
  variant = 'light',
  centered = false,
  height,
  class: className,
  icon,
} = Astro.props;

const variantClass = `cta-${variant}`;
const alignClass = centered ? 'cta-center' : '';
const heightClass = height ? `cta-${height}` : '';
const btnClass = variant === 'primary' ? 'btn-outline-light' : 'btn-primary';
---

<div class={`cta ${variantClass} ${alignClass} ${heightClass} ${className || ''}`}>
  <div class="container cta-content">
    <div class="row align-items-center">
      <div class="col-lg-8 mb-4 mb-lg-0">
        <h2 class="cta-title h3">
          {icon && <i class={`bi ${icon} me-2`} />}
          {title}
        </h2>
        <p class="cta-description mb-0">{description}</p>
      </div>
      <div class="col-lg-4 text-lg-end">
        <a href={actionUrl} class={`btn ${btnClass} btn-lg px-4`}>
          {actionLabel}
          <i class="bi bi-chevron-right ms-2 small"></i>
        </a>
      </div>
    </div>
  </div>
</div>
