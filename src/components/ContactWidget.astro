import ImageListItem from './ImageListItem.astro';

interface Contact {
  name: string;
  role: string;
  email: string;
  phone?: string;
  avatarIcon?: string; // e.g. "bi-person"
  image?: string;
}

interface Props {
  title: string;
  icon?: string;
  contacts: Contact[];
  class?: string;
}

const { title, icon, contacts, class: className } = Astro.props;
---

<div class={`card border-0 shadow-sm ${className || ''}`}>
  <div class="card-header ez-card__header">
    {icon && <i class={`bi ${icon} me-2`}></i>}
    {title}
  </div>
  <div class="card-body p-0">
    <div class="p-3">
      {contacts.map((contact, index) => (
        <>
          <ImageListItem
            value={contact.name}
            label={contact.role}
            subtext={contact.email}
            subtextIcon="bi-envelope"
            image={contact.image || contact.avatarIcon || 'bi-person'}
            class="mb-3"
          >
            {contact.phone && (
              <small class="text-muted d-block mt-1">
                <i class="bi bi-telephone me-1 text-primary"></i> {contact.phone}
              </small>
            )}
          </ImageListItem>
          {index < contacts.length - 1 && <hr class="my-3" />}
        </>
      ))}
    </div>
  </div>
</div>
