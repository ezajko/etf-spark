import IconListItem from './IconListItem.astro';

interface Document {
  title: string;
  size: string;
  format: string; // e.g. "PDF", "DOCX"
  link: string;
}

interface Props {
  title: string;
  icon?: string;
  documents: Document[];
  class?: string;
}

const { title, icon, documents, class: className } = Astro.props;
---

<div class={`ez-card ${className || ''}`}>
  <div class="ez-card__header">
    {icon && <i class={`bi ${icon} me-2`} />}
    {title}
  </div>
  <div class="list-group list-group-flush">
    {
      documents.map((doc) => (
        <IconListItem
          icon={`bi-file-earmark-${doc.format.toLowerCase() === 'pdf' ? 'pdf' : 'text'}`}
          iconColor={doc.format.toLowerCase() === 'pdf' ? 'text-danger' : 'text-primary'}
          value={doc.title}
          label={`${doc.format}, ${doc.size}`}
          link={doc.link}
        />
      ))
    }
  </div>
</div>
