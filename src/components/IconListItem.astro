interface Props {
  icon: string;
  value: string;
  label?: string;
  link?: string;
  iconColor?: string; // e.g. "text-primary", "text-danger"
  class?: string;
}

const { icon, value, label, link, iconColor = 'text-primary', class: className } = Astro.props;

const Wrapper = link ? 'a' : 'div';
const wrapperProps = link
  ? {
      href: link,
      class: `list-group-item list-group-item-action d-flex align-items-center ${className || ''}`,
    }
  : { class: `d-flex align-items-center ${className || ''}` };
---

<Wrapper {...wrapperProps}>
  <i class={`bi ${icon} ${iconColor} me-3 fs-5`}></i>
  <div>
    <span class={`d-block fw-bold`}>{value}</span>
    {label && <small class="text-muted">{label}</small>}
  </div>
</Wrapper>
