interface Props {
  image?: string; // URL or generic icon class if no image
  value: string;
  label?: string;
  subtext?: string;
  subtextIcon?: string;
  class?: string;
}

const { image, value, label, subtext, subtextIcon, class: className } = Astro.props;
---

<div class={`d-flex align-items-center ${className || ''}`}>
  <div class="avatar avatar-md bg-light me-3 flex-shrink-0">
    {
      image && image.startsWith('bi-') ? (
        <i class={`bi ${image} text-secondary fs-4`} />
      ) : (
        <img
          src={image || '/images/avatar-placeholder.png'}
          alt={value}
          class="img-fluid rounded-circle"
        />
      )
    }
  </div>
  <div>
    <h6 class="mb-0">{value}</h6>
    {label && <small class="text-muted d-block">{label}</small>}
    {
      subtext && (
        <small class="text-muted d-block mt-1">
          {subtextIcon && <i class={`bi ${subtextIcon} me-1 text-primary`} />}
          {subtext}
        </small>
      )
    }
    <slot />
  </div>
</div>
