interface Props {
  title: string;
  icon?: string;
  class?: string;
}

const { title, icon, class: className } = Astro.props;
---

<div class={`card border-0 shadow-sm ${className || ''}`}>
  <div class="card-header ez-card__header">
    {icon && <i class={`bi ${icon} me-2`}></i>}
    {title}
  </div>
  <div class="list-group list-group-flush">
    <slot />
  </div>
</div>
