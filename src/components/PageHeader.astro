interface Props {
  title: string;
  subtitle?: string;
  badge?: string;
  badgeClass?: string;
  bgClass?: string;
}

import Hero from './Hero.astro';

const { 
  title, 
  subtitle, 
  badge, 
  badgeClass = "bg-primary", 
  bgClass = "bg-primary" 
} = Astro.props;
---

<Hero height="small" class={`${bgClass} text-white`}>
  <div class="row align-items-center">
    <div class="col-lg-8">
      {badge && <span class={`badge ${badgeClass} mb-2`}>{badge}</span>}
      <h1 class="ez-hero__title mb-2">{title}</h1>
      {subtitle && <p class="ez-hero__subtitle text-white-50">{subtitle}</p>}
    </div>
    <div class="col-lg-4 text-lg-end mt-4 mt-lg-0">
      <slot name="actions" />
    </div>
  </div>
</Hero>
