import InfoWidget from './InfoWidget.astro';
import SimpleListItem from './SimpleListItem.astro';

interface Link {
  label: string;
  link: string;
  active?: boolean;
}

interface Props {
  title?: string;
  icon?: string;
  links: Link[];
  class?: string;
}

const { title = 'Brzi linkovi', icon = 'bi-link-45deg', links, class: className } = Astro.props;
---

<InfoWidget title={title} icon={icon} class={className}>
  {links.map((item) => <SimpleListItem label={item.label} link={item.link} active={item.active} />)}
</InfoWidget>
