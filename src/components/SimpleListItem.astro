interface Props {
  label: string;
  link?: string;
  icon?: string; // e.g. "bi-chevron-right"
  iconColor?: string; // e.g. "text-primary"
  class?: string;
}

const { label, link, icon, iconColor = "text-primary", class: className } = Astro.props;

const Wrapper = link ? 'a' : 'div';
const wrapperProps = link 
  ? { href: link, class: `list-group-item list-group-item-action d-flex align-items-center ${className || ''}` } 
  : { class: `list-group-item d-flex align-items-center ${className || ''}` };
---

<Wrapper {...wrapperProps}>
  {icon && (
    <div class="flex-shrink-0 me-2">
      <i class={`bi ${icon} ${iconColor}`}></i>
    </div>
  )}
  <div>{label}</div>
</Wrapper>
