interface Props {
  name: string;
  title: string;
  email: string;
  profileLink?: string;
}

const { name, title, email, profileLink = '/examples/staff-profile' } = Astro.props;
---

<div class="card h-100 border-0 shadow-sm text-center p-3">
  <div class="mb-3">
    <div class="ez-avatar ez-avatar--xl">
      <i class="bi bi-person"></i>
    </div>
  </div>
  <h5 class="card-title mb-1">
    <a href={profileLink} class="text-decoration-none stretched-link">{name}</a>
  </h5>
  <p class="text-muted small mb-2">{title}</p>
  <p class="small text-primary mb-0"><i class="bi bi-envelope me-1"></i> {email}</p>
</div>
