---
// ETF UNSA - List Group Wrapper
interface Props {
  title?: string;
  className?: string;
}

const { title, className = '' } = Astro.props;
---

<div class={`ez-list-group mb-4 ${className}`}>
  {title && <h6 class="text-uppercase text-muted fw-bold mb-3 ls-1">{title}</h6>}
  <div class="list-group">
    <slot />
  </div>
</div>
