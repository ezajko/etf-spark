---
// ETF UNSA - Base List Item
interface Props {
  className?: string;
  href?: string;
  active?: boolean;
}

const { className = '', href, active = false } = Astro.props;
const Tag = href ? 'a' : 'div';
const activeClass = active ? 'active' : '';
---

<Tag href={href} class={`list-group-item list-group-item-action ${activeClass} ${className}`}>
  <slot />
</Tag>
