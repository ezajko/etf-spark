                              class="split-tab-toggle"
                              id="v-pills-cat3-tab"
                              data-bs-toggle="pill"
                              data-bs-target="#v-pills-cat3"
                              type="button"
                              role="tab"
                              aria-controls="v-pills-cat3"
                              aria-selected="false"
                            >
                              <i class="bi bi-chevron-right">></i>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-9">
                      <div class="tab-content" id="v-pills-tabContent-level3">
                        <!-- Tab 1 Content -->
                        <div
                          class="tab-pane fade show active"
                          id="v-pills-cat1"
                          role="tabpanel"
                          aria-labelledby="v-pills-cat1-tab"
                        >
                          <div class="row">
                            <div class="col-md">
                              <h6 class="text-uppercase fw-bold mb-3">
                                <a href="#" class="text-primary text-decoration-none">Grupa A</a>
                              </h6>
                              <ul class="list-unstyled">
                                <li>
                                  <a href="#" class="text-decoration-none mb-1 d-block">Link A.1</a>
                                </li>
                                <li>
                                  <a href="#" class="text-decoration-none mb-1 d-block">Link A.2</a>
