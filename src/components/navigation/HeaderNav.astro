      <div class="collapse navbar-collapse d-none d-lg-block" id="navbarNav">
        <ul class="navbar-nav mx-auto">
          <!-- Level 0: Direct Link -->
          <li class="nav-item">
            <a class="nav-link" href={base + ''}>Početna</a>
