          <!-- Level 2: Mega Menu -->
          <!-- Level 2: Mega Menu (Examples) -->
          <li class="nav-item dropdown position-static">
            <div class="d-flex align-items-center">
              <a class="nav-link pe-1" href="#">Primjeri stranica</a>
              <a
                class="nav-link dropdown-toggle dropdown-toggle-split ps-1"
                href="#"
                role="button"
                id="navbarDropdownLevel2"
                data-bs-toggle="dropdown"
                aria-expanded="false"
