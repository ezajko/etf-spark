                <li>
                  <a class="dropdown-item" href={base + '/layout-side-bar-menu-left-right-sidebar'}
                    >Lijevi Meni + Desni Sidebar</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href={base + '/layout-side-bar-menu-right-left-sidebar'}
                    >Lijevi Sidebar + Desni Meni</a
                  >
                </li>
              </ul>
            </div>
          </li>

          <!-- Level 2: Mega Menu -->
          <!-- Level 2: Mega Menu (Examples) -->
          <li class="nav-item dropdown position-static">
            <div class="d-flex align-items-center">
              <a class="nav-link pe-1" href="#">Primjeri stranica</a>
              <a
                class="nav-link dropdown-toggle dropdown-toggle-split ps-1"
                href="#"
                role="button"
                id="navbarDropdownLevel2"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <span class="visually-hidden">Toggle Dropdown</span>
              </a>
              <div
                class="dropdown-menu w-100 shadow-lg border-0 mt-0"
                aria-labelledby="navbarDropdownLevel2"
              >
                <div class="container">
                  <div class="row">
                    <div class="col-12 col-sm-4 col-md py-4">
                      <h6 class="text-uppercase fw-bold text-primary mb-3">Odsjeci i Osoblje</h6>
                      <ul class="list-unstyled">
                        <li>
                          <a
                            class="text-decoration-none mb-1 d-block"
                            href={base + '/examples/department'}>Stranica Odsjeka</a
                          >
                        </li>
                        <li>
                          <a
                            class="text-decoration-none mb-1 d-block"
                            href={base + '/examples/study-program'}>Studijski Program</a
                          >
                        </li>
                        <li>
                          <a
                            class="text-decoration-none mb-1 d-block"
                            href={base + '/examples/study-program-list'}>Lista Programa</a
                          >
                        </li>
                        <li>
                          <a
                            class="text-decoration-none mb-1 d-block"
