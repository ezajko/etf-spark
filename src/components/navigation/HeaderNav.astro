          <!-- Level 3: Tabbed Mega Menu -->
          <li class="nav-item dropdown position-static">
            <div class="d-flex align-items-center">
              <a class="nav-link pe-1" href="#">Level 3</a>
              <a
                class="nav-link dropdown-toggle dropdown-toggle-split ps-1"
                href="#"
                role="button"
                id="navbarDropdownLevel3"
                data-bs-toggle="dropdown"
                aria-expanded="false"
                data-bs-auto-close="outside"
