          <!-- Level 1: Split Dropdown -->
          <li class="nav-item dropdown">
            <div class="d-flex align-items-center">
              <a class="nav-link pe-1" href="#">Layouts</a>
              <a
                class="nav-link dropdown-toggle dropdown-toggle-split ps-1"
                href="#"
                role="button"
