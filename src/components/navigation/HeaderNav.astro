                aria-labelledby="navbarDropdownLevel3"
              >
                <div class="container">
                  <div class="row">
                    <div class="col-md-3 border-end p-0">
                      <div
                        class="nav flex-column nav-pills me-3"
                        id="v-pills-tab-level3"
                        role="tablist"
                        aria-orientation="vertical"
                      >
                        <!-- Tab Categories -->
                        <div class="nav-item">
                          <div class="split-tab-container">
                            <a href="#" class="split-tab-link">Kategorija 1</a>
                            <button
                              class="split-tab-toggle"
                              id="v-pills-cat1-tab"
                              data-bs-toggle="pill"
                              data-bs-target="#v-pills-cat1"
                              type="button"
                              role="tab"
                              aria-controls="v-pills-cat1"
                              aria-selected="true"
                            >
                              <i class="bi bi-chevron-right">></i>
                            </button>
                          </div>
                        </div>
                        <div class="nav-item">
                          <div class="split-tab-container">
                            <a href="#" class="split-tab-link">Kategorija 2</a>
                            <button
                              class="split-tab-toggle"
                              id="v-pills-cat2-tab"
                              data-bs-toggle="pill"
                              data-bs-target="#v-pills-cat2"
                              type="button"
                              role="tab"
                              aria-controls="v-pills-cat2"
                              aria-selected="false"
                            >
                              <i class="bi bi-chevron-right">></i>
                            </button>
                          </div>
                        </div>
                        <div class="nav-item">
                          <div class="split-tab-container">
                            <a href="#" class="split-tab-link">Kategorija 3</a>
