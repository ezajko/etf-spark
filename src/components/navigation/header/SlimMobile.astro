const base = import.meta.env.BASE_URL;
---

<div class="d-md-none d-flex justify-content-between align-items-center">
  <img src={base + "/images/unsa_logo.png"} alt="UNSA" height="20">
  <button
    class="btn btn-sm btn-link text-white text-decoration-none p-0"
    type="button"
    data-bs-toggle="collapse"
    data-bs-target="#topBarContent"
    aria-expanded="false"
    aria-controls="topBarContent"
    aria-label="Toggle Top Bar Menu"
  >
    <span class="small">Univerzitet & Servisi <i class="bi bi-chevron-down"></i></span>
  </button>
</div>
