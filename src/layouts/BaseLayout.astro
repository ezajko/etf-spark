import Header from '../components/navigation/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Elektrotehnički fakultet Univerziteta u Sarajevu',
  description = 'ETF UNSA - Vododeći fakultet za elektrotehniku, računarstvo i telekomunikacije'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="bs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    
    <!-- Bootstrap CSS -->
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
      rel="stylesheet"
    />
    
    <!-- Bootstrap Icons -->
    <link 
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"
    />
    
    <!-- Google Fonts: IBM Plex Sans -->
    <link 
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@300;400;600;700&display=swap"
      rel="stylesheet"
    />
    
    <!-- Custom SCSS -->
    <link rel="stylesheet" href="/src/scss/_ez-custom.scss" />
  </head>
  <body>
    <Header />
    
    <main id="main-content">
      <slot />
    </main>
    
    <Footer />
    
    <!-- Bootstrap JS -->
    <script 
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>
