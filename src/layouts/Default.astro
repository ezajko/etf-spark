import Base from './Base.astro';
import Breadcrumbs from '../components/navigation/Breadcrumbs.astro';

interface Props {
  title?: string;
  description?: string;
  breadcrumbItems?: {
    label: string;
    href: string;
    active?: boolean;
  }[];
  // useGrid prop is now handled by specific Sidebar layouts, but we keep it here as a fallback or for simple Default usages
  useGrid?: boolean;
}

const { title, description, breadcrumbItems, useGrid = true } = Astro.props;
---

<Base title={title} description={description}>
  <!-- Banner / Hero Section -->
  <div class="page-banner">
    <slot name="banner" />
  </div>

  <!-- Breadcrumbs Section -->
  {
    breadcrumbItems && (
      <div class="page-breadcrumbs">
        <div class="container">
          <Breadcrumbs items={breadcrumbItems} />
        </div>
      </div>
    )
  }

  <!-- Main Content Wrapper -->
  <main id="main-content" class="main-content">
    <div class="container">
      <!-- Content Before Grid -->
      <div class="page-content-before">
        <div class="row">
          <div class="col-12">
            <slot name="content-before" />
          </div>
        </div>
      </div>

      <!-- Main Content Grid -->
      <div class="page-content">
        {
          useGrid ? (
            <div class="row">
              <slot />
            </div>
          ) : (
            <slot />
          )
        }
      </div>

      <!-- Content After Grid -->
      <div class="page-content-after">
        <div class="row">
          <div class="col-12">
            <slot name="content-after" />
          </div>
        </div>
      </div>
    </div>
  </main>
</Base>
