import Default from './Default.astro';
import PageHeader from '../components/PageHeader.astro';

interface BreadcrumbItem {
  label: string;
  href: string;
  active?: boolean;
}

interface Props {
  title: string;
  breadcrumbItems?: BreadcrumbItem[];
  bannerTitle?: string;
  bannerSubtitle?: string;
  bannerBgClass?: string;
}

const {
  title,
  breadcrumbItems,
  bannerTitle,
  bannerSubtitle,
  bannerBgClass = 'bg-primary',
} = Astro.props;
---

<Default title={title} breadcrumbItems={breadcrumbItems}>
  <!-- Banner Slot -->
  <slot name="banner" slot="banner">
    {
      bannerTitle && (
        <PageHeader title={bannerTitle} subtitle={bannerSubtitle} bgClass={bannerBgClass} />
      )
    }
  </slot>

  <!-- Pass content-before through -->
  <div class="content-slot py-4" slot="content-before">
    <slot name="content-before" />
  </div>

  <!-- Main Content (Full Width) -->
  <div class="col-12 content-slot py-4">
    <slot />
  </div>

  <!-- Pass content-after through -->
  <div class="content-slot py-4" slot="content-after">
    <slot name="content-after" />
  </div>
</Default>
