import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/navigation/Breadcrumbs.astro';

interface Props {
  title?: string;
  description?: string;
  breadcrumbItems?: {
    label: string;
    href: string;
    active?: boolean;
  }[];
  useGrid?: boolean;
}

const { title, description, breadcrumbItems, useGrid = true } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <!-- Banner / Hero Section -->
  <div class="ez-page-banner">
    <slot name="banner" />
  </div>

  <!-- Breadcrumbs Section -->
  {breadcrumbItems && (
    <div class="ez-page-breadcrumbs">
      <div class="container">
        <Breadcrumbs items={breadcrumbItems} />
      </div>
    </div>
  )}

  <!-- Main Content Wrapper -->
  <main class="ez-page-main-content">
    <div class="container mb-5">
      <!-- Content Before Grid -->
      <div class="ez-page-content-before">
        <slot name="content-before" />
      </div>

      <!-- Main Content Grid -->
      <div class="ez-page-content">
        {useGrid ? (
          <div class="row">
            <slot />
          </div>
        ) : (
          <slot />
        )}
      </div>

      <!-- Content After Grid -->
      <div class="ez-page-content-after">
        <slot name="content-after" />
      </div>
    </div>
  </main>
</BaseLayout>
