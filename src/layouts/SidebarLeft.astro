import Default from './Default.astro';
import PageHeader from '../components/PageHeader.astro';

interface BreadcrumbItem {
  label: string;
  href: string;
  active?: boolean;
}

interface Props {
  title: string;
  breadcrumbItems?: BreadcrumbItem[];
  bannerTitle?: string;
  bannerSubtitle?: string;
  bannerBgClass?: string;
  bannerSize?: 'full' | 'large' | 'medium' | 'small' | 'auto' | 'xs';
}

const {
  title,
  breadcrumbItems,
  bannerTitle,
  bannerSubtitle,
  bannerBgClass = 'bg-primary',
  bannerSize = 'medium',
} = Astro.props;
---

<Default title={title} breadcrumbItems={breadcrumbItems}>
  <!-- Banner Slot -->
  <slot name="banner" slot="banner">
    {
      bannerTitle && (
        <PageHeader
          title={bannerTitle}
          subtitle={bannerSubtitle}
          bgClass={bannerBgClass}
          height={bannerSize}
        />
      )
    }
  </slot>

  <!-- Pass content-before through -->
  <div class="content-slot" slot="content-before">
    <slot name="content-before" />
  </div>

  <!-- Main Grid -->
  <div class="col-lg-3 mb-4 mb-lg-0 order-2 order-lg-1 content-slot">
    <slot name="sidebar" />
  </div>

  <div class="col-lg-9 order-1 order-lg-2 content-slot">
    <slot />
  </div>

  <!-- Pass content-after through -->
  <div class="content-slot" slot="content-after">
    <slot name="content-after" />
  </div>
</Default>
