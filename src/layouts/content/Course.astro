import SidebarDual from '../SidebarDual.astro';

interface BreadcrumbItem {
  label: string;
  href: string;
  active?: boolean;
}

interface Props {
  title: string;
  breadcrumbItems?: BreadcrumbItem[];
  bannerTitle?: string;
  bannerSubtitle?: string;
}

const { title, breadcrumbItems, bannerTitle, bannerSubtitle } = Astro.props;
---

<SidebarDual
  title={title}
  breadcrumbItems={breadcrumbItems}
  bannerTitle={bannerTitle || title}
  bannerSubtitle={bannerSubtitle}
  bannerBgClass="bg-dark"
>
  <!-- Banner Slot -->
  <slot name="banner" slot="banner" />

  <!-- Left Sidebar (Menu) -->
  <Fragment slot="sidebar-left">
    <slot name="sidebar-left" />
  </Fragment>

  <!-- Main Content -->
  <slot />

  <!-- Right Sidebar (Info) -->
  <Fragment slot="sidebar-right">
    <slot name="sidebar-right" />
  </Fragment>
</SidebarDual>
