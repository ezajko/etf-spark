import SidebarRight from '../SidebarRight.astro';

interface BreadcrumbItem {
  label: string;
  href: string;
  active?: boolean;
}

interface Props {
  title: string;
  breadcrumbItems?: BreadcrumbItem[];
  bannerTitle?: string;
}

const { title, breadcrumbItems, bannerTitle } = Astro.props;
---

<SidebarRight
  title={title}
  breadcrumbItems={breadcrumbItems}
  bannerTitle={bannerTitle || 'DogaÄ‘aji'}
  bannerBgClass="bg-primary"
>
  <!-- Banner Slot -->
  <slot name="banner" slot="banner" />

  <slot />

  <Fragment slot="sidebar">
    <slot name="sidebar" />
  </Fragment>
</SidebarRight>
