import SidebarRight from '../SidebarRight.astro';

interface Props {
  title: string;
  breadcrumbItems?: { label: string; href: string; active?: boolean }[];
  bannerTitle?: string;
  bannerSubtitle?: string;
  bannerBgClass?: string;
}

const { title, breadcrumbItems, bannerTitle, bannerSubtitle, bannerBgClass = 'bg-primary' } = Astro.props;
---

<SidebarRight
  title={title}
  breadcrumbItems={breadcrumbItems}
  bannerTitle={bannerTitle}
  bannerSubtitle={bannerSubtitle}
  bannerBgClass={bannerBgClass}
>
  <slot />

  <Fragment slot="sidebar">
    <slot name="sidebar" />
  </Fragment>
</SidebarRight>
