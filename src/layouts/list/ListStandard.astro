import SidebarRight from '../SidebarRight.astro';
import Pagination from '../../components/navigation/Pagination.astro';

interface BreadcrumbItem {
  label: string;
  href: string;
  active?: boolean;
}

interface Props {
  title: string;
  listTitle: string;
  listDescription?: string;
  breadcrumbItems?: BreadcrumbItem[];
  bannerTitle?: string;
  totalPages?: number;
  currentPage?: number;
  bannerSize?: 'full' | 'large' | 'medium' | 'small' | 'auto' | 'xs';
}

const {
  title,
  listTitle,
  listDescription,
  breadcrumbItems,
  bannerTitle,
  totalPages,
  currentPage = 1,
  bannerSize = 'medium',
} = Astro.props;
---

<SidebarRight
  title={title}
  breadcrumbItems={breadcrumbItems}
  bannerTitle={bannerTitle || title}
  bannerSize={bannerSize}
>
  <h1 class="mb-4">{listTitle}</h1>
  {listDescription && <p class="lead mb-5">{listDescription}</p>}

  <div class="d-flex flex-column gap-4">
    <slot />
  </div>

  {
    totalPages && (
      <div class="mt-5">
        <Pagination currentPage={currentPage} totalPages={totalPages} baseUrl="#" />
      </div>
    )
  }

  <Fragment slot="sidebar">
    <slot name="sidebar" />
  </Fragment>
</SidebarRight>
