---
// ETF UNSA - Frames Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Buttons, Grids & Frames', href: '#' },
  { label: 'Frames', href: '#', active: true },
];

const responsiveIframeCode = `<div class="ratio ratio-16x9 border rounded overflow-hidden">
  <iframe src="https://www.etf.unsa.ba" title="ETF UNSA"></iframe>
</div>`;

const browserFrameCode = `<div class="card shadow-sm">
  <div class="card-header bg-light d-flex align-items-center p-2">
    <div class="d-flex gap-2 me-3">
      <span class="rounded-circle bg-danger" style="width: 10px; height: 10px;"></span>
      <span class="rounded-circle bg-warning" style="width: 10px; height: 10px;"></span>
      <span class="rounded-circle bg-success" style="width: 10px; height: 10px;"></span>
    </div>
    <div class="bg-white rounded px-3 py-1 text-muted small flex-grow-1 text-center border">
      example.com
    </div>
  </div>
  <div class="card-body p-0 ratio ratio-16x9">
    <iframe src="https://www.example.com" title="Browser Frame Example"></iframe>
  </div>
</div>`;
---

<NoSidebar
  title="Frames"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Frames"
  bannerSubtitle="Primjeri okvira i ugniježdenog sadržaja"
  bannerSize="xs"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Responsive Iframe"
        description="Bootstrap ratio helperi omogućavaju kreiranje responsivnih iframe kontejnera."
        code={responsiveIframeCode}
      />

      <ExampleSnippet
        title="Browser Window Frame"
        description="Simulacija prozora preglednika koristeći Card komponentu."
        code={browserFrameCode}
      />
    </div>
  </div>
</NoSidebar>
