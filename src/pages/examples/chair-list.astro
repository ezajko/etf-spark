import NoSidebar from '../../layouts/NoSidebar.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Odsjeci', href: '#' },
  { label: 'Računarstvo i informatika', href: '/examples/department' },
  { label: 'Katedre', href: '#', active: true },
];

const chairs = [
  {
    name: 'Chair 1',
    head: 'Prof. Dr. Name Surname',
    description:
      'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.',
    members: 15,
  },
  {
    name: 'Chair 2',
    head: 'Prof. Dr. Name Surname',
    description:
      'Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.',
    members: 12,
  },
];

const base = import.meta.env.BASE_URL;
---

<NoSidebar title="Katedre | ETF UNSA" breadcrumbItems={breadcrumbItems} bannerSize="xs">
  <h1 class="mb-4">Katedre Odsjeka</h1>
  <p class="lead mb-5">Odsjek za računarstvo i informatiku organizovan je kroz dvije katedre</p>

  <div class="row g-4">
    {
      chairs.map((chair) => (
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body p-4">
              <h3 class="card-title mb-3">{chair.name}</h3>
              <p class="card-text text-muted mb-4">{chair.description}</p>

              <div class="d-flex align-items-center mb-3">
                <div class="ez-avatar ez-avatar--sm me-3">
                  <i class="bi bi-person text-primary" />
                </div>
                <div>
                  <small class="text-muted d-block">Head of Chair</small>
                  <span class="fw-bold">{chair.head}</span>
                </div>
              </div>

              <div class="d-flex align-items-center">
                <div class="ez-avatar ez-avatar--sm me-3">
                  <i class="bi bi-people text-primary" />
                </div>
                <div>
                  <small class="text-muted d-block">Members</small>
                  <span class="fw-bold">{chair.members}</span>
                </div>
              </div>

              <hr class="my-4" />
              <a href={base + '/examples/staff-list'} class="btn btn-outline-primary w-100">
                View Members
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</NoSidebar>
