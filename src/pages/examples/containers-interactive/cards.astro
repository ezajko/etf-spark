---
// ETF UNSA - Cards Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Po훾etna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Containers & Interactive', href: '#' },
  { label: 'Cards', href: '#', active: true },
];

const basicCardCode = `<div class="ez-card" style="width: 18rem;">
  <img src="https://placehold.co/600x400" class="card-img-top" alt="...">
  <div class="ez-card__body">
    <h5 class="ez-card__title">Card title</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>`;

const cardListCode = `<div class="ez-card" style="width: 18rem;">
  <div class="ez-card__header">
    Featured
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">An item</li>
    <li class="list-group-item">A second item</li>
    <li class="list-group-item">A third item</li>
  </ul>
</div>`;

const cardHeaderFooterCode = `<div class="ez-card text-center">
  <div class="ez-card__header">
    Featured Header
  </div>
  <div class="ez-card__body">
    <h5 class="ez-card__title">Special title treatment</h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
  <div class="ez-card__footer text-muted">
    2 days ago
  </div>
</div>`;

const cardGroupCode = `<div class="row row-cols-1 row-cols-md-3 g-4">
  <div class="col">
    <div class="ez-card h-100">
      <img src="https://placehold.co/600x400" class="card-img-top" alt="...">
      <div class="ez-card__body">
        <h5 class="ez-card__title">Card title</h5>
        <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="ez-card h-100">
      <img src="https://placehold.co/600x400" class="card-img-top" alt="...">
      <div class="ez-card__body">
        <h5 class="ez-card__title">Card title</h5>
        <p class="card-text">This is a short card.</p>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="ez-card h-100">
      <img src="https://placehold.co/600x400" class="card-img-top" alt="...">
      <div class="ez-card__body">
        <h5 class="ez-card__title">Card title</h5>
        <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content.</p>
      </div>
    </div>
  </div>
</div>`;
---

<NoSidebar
  title="Cards"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Cards"
  bannerSubtitle="Kartice za prikaz sadr탑aja"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Basic Card"
        description="Osnovna kartica sa slikom, naslovom i tekstom."
        code={basicCardCode}
      />

      <ExampleSnippet
        title="Card with List"
        description="Kartica koja sadr탑i listu."
        code={cardListCode}
      />

      <ExampleSnippet
        title="Header & Footer"
        description="Kartica sa zaglavljem i podno탑jem."
        code={cardHeaderFooterCode}
      />

      <ExampleSnippet
        title="Card Groups (Grid)"
        description="Grupa kartica u grid rasporedu sa jednakom visinom."
        code={cardGroupCode}
      />

      <ExampleSnippet
        title="Horizontal Card"
        description="Kartica sa horizontalnim rasporedom (slika lijevo, tekst desno)."
        code={`<div class="ez-card ez-card--horizontal mb-3" style="max-width: 540px;">
  <img src="https://placehold.co/200x300" class="img-fluid rounded-start" alt="...">
  <div class="ez-card__body">
    <h5 class="ez-card__title">Horizontal Card</h5>
    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
  </div>
</div>`}
      />
    </div>
  </div>
</NoSidebar>
