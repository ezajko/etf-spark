---
// ETF UNSA - CTA Examples
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Poƒçetna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Containers & Interactive', href: '#' },
  { label: 'Call to Action', href: '#', active: true },
];

const simpleCtaCode = `<div class="card border-0 bg-light p-5 text-center">
  <div class="card-body">
    <h2 class="card-title mb-3">Ready to get started?</h2>
    <p class="card-text lead mb-4">Join us today and experience the difference.</p>
    <a href="#" class="btn btn-primary btn-lg">Sign Up Now</a>
  </div>
</div>`;

const inlineCtaCode = `<div class="bg-primary text-white p-5 rounded">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
    <div class="mb-3 mb-md-0">
      <h2 class="h3 fw-bold mb-1">Stay updated with our newsletter</h2>
      <p class="mb-0 text-white-50">Subscribe to get the latest news and updates.</p>
    </div>
    <div class="d-flex gap-2">
      <input type="email" class="form-control" placeholder="Email address">
      <button class="btn btn-light text-primary fw-bold">Subscribe</button>
    </div>
  </div>
</div>`;

const imageCtaCode = `<div class="card text-white bg-dark border-0 overflow-hidden">
  <img src="https://placehold.co/1200x400/333/999" class="card-img opacity-50" alt="...">
  <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center text-center">
    <h2 class="card-title fw-bold display-5">Explore Our Programs</h2>
    <p class="card-text fs-4 mb-4">Discover the perfect study program for your future career.</p>
    <a href="#" class="btn btn-light btn-lg px-5 fw-bold">View Programs</a>
  </div>
</div>`;
---

<NoSidebar
  title="Call to Action"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Call to Action"
  bannerSubtitle="Sekcije za poziv na akciju (CTA)"
  bannerSize="xs"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Simple CTA"
        description="Jednostavna centrirana CTA sekcija."
        code={simpleCtaCode}
      />

      <ExampleSnippet
        title="Inline CTA"
        description="CTA sekcija sa formom u jednom redu."
        code={inlineCtaCode}
      />

      <ExampleSnippet
        title="Image Overlay CTA"
        description="CTA sekcija sa pozadinskom slikom."
        code={imageCtaCode}
      />
    </div>
  </div>
</NoSidebar>
