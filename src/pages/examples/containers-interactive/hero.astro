---
// ETF UNSA - Hero Examples
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Containers & Interactive', href: '#' },
  { label: 'Hero', href: '#', active: true },
];

const centeredHeroCode = `<div class="px-4 py-5 my-5 text-center">
  <div class="mb-4 text-primary">
    <i class="bi bi-mortarboard display-1"></i>
  </div>
  <h1 class="display-5 fw-bold">Centered Hero</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit.</p>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
      <button type="button" class="btn btn-primary btn-lg px-4 gap-3">Primary button</button>
      <button type="button" class="btn btn-outline-secondary btn-lg px-4">Secondary</button>
    </div>
  </div>
</div>`;

const leftAlignedHeroCode = `<div class="container col-xxl-8 px-4 py-5">
  <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
    <div class="col-10 col-sm-8 col-lg-6">
      <img src="https://placehold.co/700x500/EEE/31343C" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold lh-1 mb-3">Responsive left-aligned hero with image</h1>
      <p class="lead">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p>
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <button type="button" class="btn btn-primary btn-lg px-4 me-md-2">Primary</button>
        <button type="button" class="btn btn-outline-secondary btn-lg px-4">Default</button>
      </div>
    </div>
  </div>
</div>`;

const darkHeroCode = `<div class="bg-dark text-secondary px-4 py-5 text-center">
  <div class="py-5">
    <h1 class="display-5 fw-bold text-white">Dark Mode Hero</h1>
    <div class="col-lg-6 mx-auto">
      <p class="fs-5 mb-4">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit.</p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <button type="button" class="btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold">Custom button</button>
        <button type="button" class="btn btn-outline-light btn-lg px-4">Secondary</button>
      </div>
    </div>
  </div>
</div>`;
---

<NoSidebar
  title="Hero"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Hero Sections"
  bannerSubtitle="Velike uvodne sekcije (Hero)"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Centered Hero"
        description="Centrirana hero sekcija sa ikonom i dugmadima."
        code={centeredHeroCode}
      />

      <ExampleSnippet
        title="Left Aligned with Image"
        description="Hero sekcija sa slikom sa strane i poravnatim tekstom."
        code={leftAlignedHeroCode}
      />

      <ExampleSnippet
        title="Dark Mode Hero"
        description="Tamna varijanta hero sekcije."
        code={darkHeroCode}
      />
    </div>
  </div>
</NoSidebar>
