---
// ETF UNSA - Progress Bar Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Containers & Interactive', href: '#' },
  { label: 'Progress', href: '#', active: true },
];

const progressCode = `<div class="progress mb-3">
  <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="progress mb-3">
  <div class="progress-bar bg-secondary" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
</div>

<div class="progress mb-3">
  <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
</div>

<div class="progress">
  <div class="progress-bar bg-success" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
  <div class="progress-bar bg-warning" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
  <div class="progress-bar bg-danger" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
</div>`;

const stripedCode = `<div class="progress mb-3">
  <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="progress mb-3">
  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
</div>`;
---

<NoSidebar
  title="Progress Bars"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Progress"
  bannerSubtitle="Komponente za prikaz napretka procesa"
  bannerSize="xs"
>
  <div class="row g-5">
    <div class="col-12">
      <ExampleSnippet
        title="Basic Progress"
        description="Standardni progress barovi sa različitim širinama i bojama."
        code={progressCode}
      />

      <ExampleSnippet
        title="Striped & Animated"
        description="Progress barovi sa prugama i animacijom."
        code={stripedCode}
      />
    </div>
  </div>
</NoSidebar>
