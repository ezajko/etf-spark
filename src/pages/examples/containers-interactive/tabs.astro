---
// ETF UNSA - Tabs Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';
import TabsComponent from '../../../components/Tabs.astro';
import TabItem from '../../../components/TabItem.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Containers & Interactive', href: '#' },
  { label: 'Tabs', href: '#', active: true },
];

const basicTabs = [
  { id: 'home', label: 'Home', active: true },
  { id: 'profile', label: 'Profile' },
  { id: 'contact', label: 'Contact' },
];

const verticalTabs = [
  { id: 'v-home', label: 'Home', active: true },
  { id: 'v-profile', label: 'Profile' },
  { id: 'v-messages', label: 'Messages' },
];

const pillsTabs = [
  { id: 'pills-home', label: 'Home', active: true },
  { id: 'pills-profile', label: 'Profile' },
  { id: 'pills-contact', label: 'Contact' },
];
const basicTabsCode = `<div class="tabs tabs-horizontal">
  <div class="tab-header" role="tablist" aria-orientation="horizontal">
    <button
      class="nav-link active"
      id="home-tab"
      data-bs-toggle="tab"
      data-bs-target="#home"
      type="button"
      role="tab"
      aria-controls="home"
      aria-selected="true">Home</button
    >
    <button
      class="nav-link"
      id="profile-tab"
      data-bs-toggle="tab"
      data-bs-target="#profile"
      type="button"
      role="tab"
      aria-controls="profile"
      aria-selected="false">Profile</button
    >
    <button
      class="nav-link"
      id="contact-tab"
      data-bs-toggle="tab"
      data-bs-target="#contact"
      type="button"
      role="tab"
      aria-controls="contact"
      aria-selected="false">Contact</button
    >
  </div>
  <div class="tab-content">
    <div
      class="tab-pane fade show active"
      id="home"
      role="tabpanel"
      aria-labelledby="home-tab"
      tabindex="0"
    >
      <p class="mb-0">This is the Home tab content...</p>
    </div>
    <!-- ... other panes ... -->
  </div>
</div>`;

const verticalTabsCode = `<div class="tabs tabs-vertical">
  <div class="tab-header" role="tablist" aria-orientation="vertical">
    <button class="nav-link active" ...>Home</button>
    <!-- ... -->
  </div>
  <div class="tab-content">
    <!-- ... panes ... -->
  </div>
</div>`;

const pillsTabsCode = `<div class="tabs tabs-horizontal">
  <div class="tab-header nav-pills" role="tablist" aria-orientation="horizontal">
    <button class="nav-link active" data-bs-toggle="pill" ...>Home</button>
    <!-- ... -->
  </div>
  <!-- ... content ... -->
</div>`;

const footerTabsCode = `<div class="tabs tabs-horizontal">
  <div class="tab-header" ...>...</div>
  <div class="tab-content">...</div>
  <div class="tab-footer">
    <button class="btn btn-primary btn-sm">Save Changes</button>
  </div>
</div>`;
---

<NoSidebar
  title="Tabs"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Tabs"
  bannerSubtitle="Navigacija pomoću tabova"
>
  <div class="row g-5">
    <div class="col-12">
      <ExampleSnippet
        title="Basic Tabs"
        description="Standardni tabovi sa borderima i sadržajem."
        code={basicTabsCode}
      >
        <TabsComponent id="basicTabs" tabs={basicTabs}>
          <TabItem id="home" active>
            <p class="mb-0">
              This is the Home tab content. Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            </p>
          </TabItem>
          <TabItem id="profile">
            <p class="mb-0">
              This is the Profile tab content. Sed do eiusmod tempor incididunt ut labore et dolore
              magna aliqua.
            </p>
          </TabItem>
          <TabItem id="contact">
            <p class="mb-0">
              This is the Contact tab content. Ut enim ad minim veniam, quis nostrud exercitation
              ullamco laboris nisi ut aliquip.
            </p>
          </TabItem>
        </TabsComponent>
      </ExampleSnippet>
    </div>

    <div class="col-12">
      <ExampleSnippet
        title="Vertical Tabs"
        description="Verikalni tabovi za navigaciju sa lijeve strane."
        code={verticalTabsCode}
      >
        <TabsComponent id="verticalTabs" tabs={verticalTabs} vertical>
          <TabItem id="v-home" active>
            <p>Home content (Vertical). Lorem ipsum dolor sit amet.</p>
          </TabItem>
          <TabItem id="v-profile">
            <p>Profile content (Vertical). Consectetur adipiscing elit.</p>
          </TabItem>
          <TabItem id="v-messages">
            <p>Messages content (Vertical). Sed do eiusmod tempor incididunt.</p>
          </TabItem>
        </TabsComponent>
      </ExampleSnippet>
    </div>

    <div class="col-12">
      <ExampleSnippet
        title="Pills"
        description="Tabovi u stilu pilula (buttons)."
        code={pillsTabsCode}
      >
        <TabsComponent id="pillsTabs" tabs={pillsTabs} pills>
          <TabItem id="pills-home" active> Home Content... </TabItem>
          <TabItem id="pills-profile"> Profile Content... </TabItem>
          <TabItem id="pills-contact"> Contact Content... </TabItem>
        </TabsComponent>
      </ExampleSnippet>
    </div>

    <div class="col-12">
      <ExampleSnippet
        title="Tabs with Footer"
        description="Tabovi sa footerom za akcije."
        code={footerTabsCode}
      >
        <TabsComponent id="footerTabs" tabs={basicTabs}>
          <TabItem id="f-home" active>
            <p class="mb-0">Content with footer below.</p>
          </TabItem>
          <TabItem id="f-profile">
            <p class="mb-0">Profile content.</p>
          </TabItem>
          <TabItem id="f-contact">
            <p class="mb-0">Contact content.</p>
          </TabItem>
          <div slot="footer" class="d-flex justify-content-end gap-2">
            <button class="btn btn-secondary btn-sm">Cancel</button>
            <button class="btn btn-primary btn-sm">Save Changes</button>
          </div>
        </TabsComponent>
      </ExampleSnippet>
    </div>
  </div>
</NoSidebar>
```
