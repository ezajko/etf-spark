---
// ETF UNSA - Tabs Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';
import TabsComponent from '../../../components/Tabs.astro';
import TabItem from '../../../components/TabItem.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Containers & Interactive', href: '#' },
  { label: 'Tabs', href: '#', active: true },
];

const basicTabs = [
  { id: 'home', label: 'Home', active: true },
  { id: 'profile', label: 'Profile' },
  { id: 'contact', label: 'Contact' },
];

const verticalTabs = [
  { id: 'v-home', label: 'Home', active: true },
  { id: 'v-profile', label: 'Profile' },
  { id: 'v-messages', label: 'Messages' },
];

const pillsTabs = [
  { id: 'pills-home', label: 'Home', active: true },
  { id: 'pills-profile', label: 'Profile' },
  { id: 'pills-contact', label: 'Contact' },
];
---

<NoSidebar
  title="Tabs"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Tabs"
  bannerSubtitle="Navigacija pomoću tabova"
>
  <div class="row g-5">
    <div class="col-12">
      <h3>Basic Tabs</h3>
      <p>Standardni tabovi sa borderima i sadržajem.</p>

      <div class="p-4 border rounded mb-4">
        <TabsComponent id="basicTabs" tabs={basicTabs}>
          <TabItem id="home" active>
            <p class="mb-0">
              This is the Home tab content. Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            </p>
          </TabItem>
          <TabItem id="profile">
            <p class="mb-0">
              This is the Profile tab content. Sed do eiusmod tempor incididunt ut labore et dolore
              magna aliqua.
            </p>
          </TabItem>
          <TabItem id="contact">
            <p class="mb-0">
              This is the Contact tab content. Ut enim ad minim veniam, quis nostrud exercitation
              ullamco laboris nisi ut aliquip.
            </p>
          </TabItem>
        </TabsComponent>
      </div>
    </div>

    <div class="col-12">
      <h3>Vertical Tabs</h3>
      <p>Verikalni tabovi za navigaciju sa lijeve strane.</p>

      <div class="p-4 border rounded mb-4">
        <TabsComponent id="verticalTabs" tabs={verticalTabs} vertical>
          <TabItem id="v-home" active>
            <p>Home content (Vertical). Lorem ipsum dolor sit amet.</p>
          </TabItem>
          <TabItem id="v-profile">
            <p>Profile content (Vertical). Consectetur adipiscing elit.</p>
          </TabItem>
          <TabItem id="v-messages">
            <p>Messages content (Vertical). Sed do eiusmod tempor incididunt.</p>
          </TabItem>
        </TabsComponent>
      </div>
    </div>

    <div class="col-12">
      <h3>Pills</h3>
      <p>Tabovi u stilu pilula (buttons).</p>

      <div class="p-4 border rounded mb-4">
        <TabsComponent id="pillsTabs" tabs={pillsTabs} pills>
          <TabItem id="pills-home" active> Home Content... </TabItem>
          <TabItem id="pills-profile"> Profile Content... </TabItem>
          <TabItem id="pills-contact"> Contact Content... </TabItem>
        </TabsComponent>
      </div>
    </div>
  </div>
</NoSidebar>
