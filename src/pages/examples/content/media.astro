import NoSidebar from '../../../layouts/NoSidebar.astro';
import SlotPlaceholder from '../../../components/debug/SlotPlaceholder.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri sadržaja', href: '#' },
  { label: 'Mediji i Raspored', href: '#', active: true },
];

const base = import.meta.env.BASE_URL;
---

<NoSidebar title="Mediji i Galerije | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Banner Slot -->
  <SlotPlaceholder slot="banner" name="banner" minHeight="15rem" />

  <!-- Main Content -->
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">Slike i Multimedija</h1>
      <p class="lead">
        Primjeri korištenja slika, aligmana, galerija i ugniježdenih video zapisa unutar sadržaja.
      </p>
      <hr class="my-5" />
    </div>

    <!-- Full Width Image -->
    <div class="col-12 mb-5">
      <h3 class="mb-4 text-primary">Slika pune širine</h3>
      <figure class="figure w-100">
        <img
          src={base + '/images/etf-building.png'}
          class="figure-img img-fluid rounded w-100"
          alt="ETF Zgrada"
          style="max-height: 500px; object-fit: cover;"
        />
        <figcaption class="figure-caption">Zgrada Elektrotehničkog fakulteta</figcaption>
      </figure>
      <p>
        Slika koja zauzima punu širinu kontejnera. Korisno za isticanje glavnih vizuala ili intro
        sekcija.
      </p>
    </div>

    <!-- Floated Images -->
    <div class="col-12 mb-5">
      <h3 class="mb-4 text-primary">Slike sa tekstom (Floating)</h3>
      <div class="clearfix">
        <img
          src={base + '/images/dept_ri.png'}
          class="col-md-6 float-md-start mb-3 ms-md-3 rounded border"
          alt="Računarstvo i Informatika"
          style="max-width: 300px;"
        />
        <p>
          Ovo je primjer slike koja je poravnata lijevo (float-start) dok tekst teče oko nje. Lorem
          ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut
          labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco
          laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in
          voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat
          cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
        </p>
        <p>
          Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque
          laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi
          architecto beatae vitae dicta sunt explicabo. Nemo enim ipsam voluptatem quia voluptas sit
          aspernatur aut odit aut fugit.
        </p>
      </div>

      <div class="clearfix mt-4">
        <img
          src={base + '/images/project-smart-city.png'}
          class="col-md-6 float-md-end mb-3 ms-md-3 rounded shadow-sm"
          alt="Smart City Project"
          style="max-width: 300px;"
        />
        <p>
          Ovo je primjer slike koja je poravnata desno (float-end). Tekst nastavlja logičkim tokom i
          obavija sliku. Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet,
          consectetur, adipisci velit, sed quia non numquam eius modi tempora incidunt ut labore et
          dolore magnam aliquam quaerat voluptatem. Ut enim ad minima veniam, quis nostrum
          exercitationem ullam corporis suscipit laboriosam, nisi ut aliquid ex ea commodi
          consequatur?
        </p>
      </div>
    </div>

    <!-- Gallery Grid -->
    <div class="col-12 mb-5">
      <h3 class="mb-4 text-primary">Jednostavna Galerija</h3>
      <div class="row g-3">
        <div class="col-md-4">
          <img
            src={base + '/images/dept_ae.png'}
            class="img-fluid rounded border h-100 object-fit-cover"
            alt="Automatika"
          />
        </div>
        <div class="col-md-4">
          <img
            src={base + '/images/dept_ee.png'}
            class="img-fluid rounded border h-100 object-fit-cover"
            alt="Elektroenergetika"
          />
        </div>
        <div class="col-md-4">
          <img
            src={base + '/images/dept_tk.png'}
            class="img-fluid rounded border h-100 object-fit-cover"
            alt="Telekomunikacije"
          />
        </div>
        <div class="col-md-6">
          <img
            src={base + '/images/news_1.png'}
            class="img-fluid rounded border w-100 h-100 object-fit-cover"
            alt="News 1"
          />
        </div>
        <div class="col-md-6">
          <img
            src={base + '/images/news_2.png'}
            class="img-fluid rounded border w-100 h-100 object-fit-cover"
            alt="News 2"
          />
        </div>
      </div>
    </div>

    <!-- Video Embed -->
    <div class="col-12 mb-5">
      <h3 class="mb-4 text-primary">Video Sadržaj</h3>
      <div class="ratio ratio-16x9">
        <iframe
          src="https://www.youtube.com/embed/zpOULjyy-n8?rel=0"
          title="YouTube video"
          allowfullscreen></iframe>
      </div>
      <p class="text-muted mt-2">
        Primjer responsivnog video embeda koristeći Bootstrap <code>ratio</code> klase.
      </p>
    </div>
  </div>
</NoSidebar>
