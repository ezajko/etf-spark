import NoSidebar from '../../../layouts/NoSidebar.astro';
import SlotPlaceholder from '../../../components/debug/SlotPlaceholder.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri sadržaja', href: '#' },
  { label: 'Tekst i Struktura', href: '#', active: true },
];
---

<NoSidebar title="Tekst i Struktura | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Banner Slot -->
  <SlotPlaceholder slot="banner" name="banner" minHeight="15rem" />

  <!-- Main Content -->
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">Tipografija i Struktura Teksta</h1>
      <p class="lead">
        Ovo je primjer stranice koja demonstrira različite stilove teksta, naslova, listi i tabela
        koji se mogu koristiti unutar sadržaja.
      </p>

      <hr class="my-5" />
    </div>

    <!-- Headings -->
    <div class="col-lg-6 mb-5">
      <div class="p-4 border rounded bg-light h-100">
        <h3 class="mb-4 text-primary">Naslovi</h3>
        <h1>Naslov H1</h1>
        <h2>Naslov H2</h2>
        <h3>Naslov H3</h3>
        <h4>Naslov H4</h4>
        <h5>Naslov H5</h5>
        <h6>Naslov H6</h6>
      </div>
    </div>

    <!-- Alignments & Transformation -->
    <div class="col-lg-6 mb-5">
      <div class="p-4 border rounded bg-light h-100">
        <h3 class="mb-4 text-primary">Poravnanja i Transformacije</h3>
        <p class="text-start">Ovaj tekst je poravnat lijevo.</p>
        <p class="text-center">Ovaj tekst je centriran.</p>
        <p class="text-end">Ovaj tekst je poravnat desno.</p>
        <p class="text-lowercase">Sva slova su mala.</p>
        <p class="text-uppercase">Sva slova su velika.</p>
        <p class="text-capitalize">Prvo slovo svake riječi je veliko.</p>
      </div>
    </div>

    <!-- Inline Text Elements -->
    <div class="col-lg-12 mb-5">
      <h3 class="mb-4 text-primary">Formatiranje Teksta</h3>
      <p>
        Možete koristiti <strong>podebljani tekst</strong> za naglašavanje, ili <em>italic</em> za kurziv.
        Također su dostupni <mark>markirani</mark> dijelovi, <del>prekriženi</del> tekst, te
        <span class="text-decoration-underline">podvučeni</span> tekst.
        <a href="#" class="text-primary hover-underline">Ovo je primjer linka</a>.
      </p>
      <p class="small text-muted">
        Ovo je primjer malog teksta (small) koji se često koristi za fusnote ili manje bitne
        informacije.
      </p>
    </div>

    <!-- Blockquotes -->
    <div class="col-lg-12 mb-5">
      <h3 class="mb-4 text-primary">Citati</h3>
      <figure class="text-center p-5 bg-light rounded">
        <blockquote class="blockquote">
          <p>"Obrazovanje je najmoćnije oružje koje možete upotrijebiti da mijenjate svijet."</p>
        </blockquote>
        <figcaption class="blockquote-footer">
          Nelson Mandela u <cite title="Source Title">Govoru o obrazovanju</cite>
        </figcaption>
      </figure>
    </div>

    <!-- Lists -->
    <div class="col-lg-6 mb-5">
      <h3 class="mb-4 text-primary">Liste</h3>
      <div class="row">
        <div class="col-md-6">
          <h5>Nuredirana lista</h5>
          <ul>
            <li>Element liste 1</li>
            <li>Element liste 2</li>
            <li>
              Ugniježdena lista
              <ul>
                <li>Pod-element 1</li>
                <li>Pod-element 2</li>
              </ul>
            </li>
            <li>Element liste 3</li>
          </ul>
        </div>
        <div class="col-md-6">
          <h5>Uređena lista</h5>
          <ol>
            <li>Prvi korak</li>
            <li>Drugi korak</li>
            <li>
              Pod-koraci
              <ol>
                <li>Faza A</li>
                <li>Faza B</li>
              </ol>
            </li>
            <li>Završni korak</li>
          </ol>
        </div>
      </div>
      <div class="mt-3">
        <h5>Lista bez stilova</h5>
        <ul class="list-unstyled">
          <li>Ovo je lista bez bulleta</li>
          <li>Korisno za footer linkove</li>
          <li>Ili navigacijske elemente</li>
        </ul>
      </div>
    </div>

    <!-- Address -->
    <div class="col-lg-6 mb-5">
      <h3 class="mb-4 text-primary">Adresa</h3>
      <address class="p-4 bg-light rounded border">
        <strong>Elektrotehnički fakultet Sarajevo</strong><br />
        Zmaja od Bosne bb<br />
        Kampus Univerziteta u Sarajevu<br />
        71000 Sarajevo, BiH<br />
        <br />
        <abbr title="Telefon">Tel:</abbr> +387 33 250 700<br />
        <abbr title="Email">Email:</abbr>
        <a href="mailto:info@etf.unsa.ba">info@etf.unsa.ba</a>
      </address>
    </div>

    <!-- Tables -->
    <div class="col-12 mb-5">
      <h3 class="mb-4 text-primary">Tabele</h3>
      <div class="table-responsive">
        <table class="table table-striped table-hover border">
          <thead class="table-light">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Ime</th>
              <th scope="col">Prezime</th>
              <th scope="col">Korisničko ime</th>
              <th scope="col">Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td>Marko</td>
              <td>Marković</td>
              <td>@mdo</td>
              <td><span class="badge bg-success">Aktivan</span></td>
            </tr>
            <tr>
              <th scope="row">2</th>
              <td>Ana</td>
              <td>Anić</td>
              <td>@fat</td>
              <td><span class="badge bg-warning text-dark">Na čekanju</span></td>
            </tr>
            <tr>
              <th scope="row">3</th>
              <td>Ivan</td>
              <td>Ivić</td>
              <td>@twitter</td>
              <td><span class="badge bg-danger">Suspendovan</span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Code Blocks -->
    <div class="col-12 mb-5">
      <h3 class="mb-4 text-primary">Kod</h3>
      <p>Primjer <code>inline koda</code> unutar paragrafa.</p>
      <pre
        class="bg-dark text-light p-4 rounded"><code>&lt;div class="container"&gt;
  &lt;h1&gt;Hello World&lt;/h1&gt;
  &lt;p&gt;Ovo je primjer koda.&lt;/p&gt;
&lt;/div&gt;</code></pre>
    </div>
  </div>
</NoSidebar>
