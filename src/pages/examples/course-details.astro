import Course from '../../layouts/content/Course.astro';
import SideMenu from '../../components/navigation/SideMenu.astro';
import Accordion from '../../components/Accordion.astro';
import AccordionItem from '../../components/AccordionItem.astro';

import Banner from '../../components/Banner.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Odsjeci', href: '#' },
  { label: 'Računarstvo i informatika', href: '#' },
  { label: 'Predmeti', href: '#' },
  { label: 'Algoritmi i strukture podataka', href: '#', active: true },
];

const base = import.meta.env.BASE_URL;
---

<Course title="Algoritmi i strukture podataka | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Banner Slot -->
  <Banner
    slot="banner"
    title="Algoritmi i strukture podataka"
    subtitle="RI-2-1 / ECTS: 6.0"
    size="sm"
    image="/images/course-banner.jpg"
  />
  <!-- Left Column: Side Menu -->
  <Fragment slot="sidebar-left">
    <SideMenu />
  </Fragment>

  <!-- Main Content -->
  <div class="mb-4">
    <span class="badge bg-secondary mb-2">Required Course</span>
    <h1 class="fw-bold mb-2">Course Name</h1>
    <p class="text-muted lead">Code: C101</p>
  </div>

  <div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-4 p-lg-5">
      <section class="mb-5">
        <h3 class="h5 fw-bold text-uppercase text-secondary mb-3">Course Description</h3>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt
          ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation
          ullamco laboris nisi ut aliquip ex ea commodo consequat.
        </p>
        <p>
          Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat
          nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia
          deserunt mollit anim id est laborum.
        </p>
      </section>

      <section class="mb-5">
        <h3 class="h5 fw-bold text-uppercase text-secondary mb-3">Learning Outcomes</h3>
        <ul class="list-check">
          <li><i class="bi bi-check-circle-fill text-success me-2"></i> Outcome 1</li>
          <li><i class="bi bi-check-circle-fill text-success me-2"></i> Outcome 2</li>
          <li><i class="bi bi-check-circle-fill text-success me-2"></i> Outcome 3</li>
          <li><i class="bi bi-check-circle-fill text-success me-2"></i> Outcome 4</li>
        </ul>
      </section>

      <section>
        <h3 class="h5 fw-bold text-uppercase text-secondary mb-3">Syllabus</h3>
        <div class="accordion" id="syllabusAccordion">
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button
                class="accordion-button"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#week1"
              >
                Week 1-5: Topic 1
              </button>
            </h2>
            <div
              id="week1"
              class="accordion-collapse collapse show"
              data-bs-parent="#syllabusAccordion"
            >
              <div class="accordion-body">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button
                class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#week2"
              >
                Week 6-10: Topic 2
              </button>
            </h2>
            <div id="week2" class="accordion-collapse collapse" data-bs-parent="#syllabusAccordion">
              <div class="accordion-body">
                Ut enim ad minim veniam, quis nostrud exercitation ullamco.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button
                class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#week3"
              >
                Week 11-15: Topic 3
              </button>
            </h2>
            <div id="week3" class="accordion-collapse collapse" data-bs-parent="#syllabusAccordion">
              <div class="accordion-body">
                Duis aute irure dolor in reprehenderit in voluptate velit.
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>

  <!-- Right Sidebar (Info) -->
  <Fragment slot="sidebar-right">
    <div class="card border-0 shadow-sm mb-4 bg-body-tertiary">
      <div class="card-body p-4">
        <h4 class="h5 fw-bold mb-4">Course Info</h4>

        <div class="mb-3 pb-3 border-bottom">
          <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;"
            >ECTS Credits</small
          >
          <div class="fs-4 fw-bold text-primary">6.0</div>
        </div>

        <div class="mb-3 pb-3 border-bottom">
          <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;"
            >Semester</small
          >
          <div class="fw-medium">1 (Winter)</div>
        </div>

        <div class="mb-3 pb-3 border-bottom">
          <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;"
            >Lectures</small
          >
          <div class="fw-medium">3 hours/week</div>
        </div>

        <div class="mb-2">
          <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;"
            >Tutorials</small
          >
          <div class="fw-medium">2 hours/week</div>
        </div>
      </div>
    </div>

    <div class="card border-0 shadow-sm">
      <div class="card-body p-4">
        <h4 class="h5 fw-bold mb-4">Teaching Staff</h4>

        <div class="mb-4">
          <small class="text-muted d-block mb-2">Professor</small>
          <div class="d-flex align-items-center">
            <div class="ez-avatar ez-avatar--sm me-3"><i class="bi bi-person"></i></div>
            <div>
              <a href="#" class="fw-bold text-decoration-none text-dark">Dr. Name Surname</a>
              <span class="d-block small text-muted">Full Professor</span>
            </div>
          </div>
        </div>

        <div class="mb-0">
          <small class="text-muted d-block mb-2">Assistant</small>
          <div class="d-flex align-items-center">
            <div class="ez-avatar ez-avatar--sm me-3"><i class="bi bi-person"></i></div>
            <div>
              <a href="#" class="fw-bold text-decoration-none">Name Surname</a>
              <span class="d-block small text-muted">Teaching Assistant</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Fragment>
</Course>
