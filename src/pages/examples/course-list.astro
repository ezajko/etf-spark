import PageLayout from '../../layouts/PageLayout.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Odsjeci', href: '#' },
  { label: 'Računarstvo i informatika', href: '/examples/department' },
  { label: 'Predmeti', href: '#', active: true },
];

const courses = [
  {
    code: 'C101',
    name: 'Course Name 1',
    ects: 6,
    semester: '1 (Winter)',
    type: 'Required',
    professor: 'Dr. Name Surname',
  },
  {
    code: 'C102',
    name: 'Course Name 2',
    ects: 5,
    semester: '1 (Winter)',
    type: 'Required',
    professor: 'Dr. Name Surname',
  },
  {
    code: 'C201',
    name: 'Course Name 3',
    ects: 6,
    semester: '2 (Summer)',
    type: 'Required',
    professor: 'Dr. Name Surname',
  },
  {
    code: 'C301',
    name: 'Course Name 4',
    ects: 5,
    semester: '3 (Winter)',
    type: 'Elective',
    professor: 'Dr. Name Surname',
  },
  {
    code: 'C302',
    name: 'Course Name 5',
    ects: 4,
    semester: '3 (Winter)',
    type: 'Elective',
    professor: 'Dr. Name Surname',
  },
  {
    code: 'C401',
    name: 'Course Name 6',
    ects: 6,
    semester: '4 (Summer)',
    type: 'Required',
    professor: 'Dr. Name Surname',
  },
];

const base = import.meta.env.BASE_URL;
---

<PageLayout title="Predmeti | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <div class="col-12">
    <h1 class="mb-4">Katalog Predmeta</h1>

    <div class="card border-0 shadow-sm mb-4">
      <div class="card-body bg-light">
        <form class="row g-3">
          <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Naziv ili šifra predmeta..." />
          </div>
          <div class="col-md-3">
            <select class="form-select">
              <option selected>Svi semestri</option>
              <option value="1">Semestar 1</option>
              <option value="2">Semestar 2</option>
              <option value="3">Semestar 3</option>
            </select>
          </div>
          <div class="col-md-3">
            <select class="form-select">
              <option selected>Svi tipovi</option>
              <option value="obavezni">Obavezni</option>
              <option value="izborni">Izborni</option>
            </select>
          </div>
          <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filtriraj</button>
          </div>
        </form>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>Šifra</th>
            <th>Naziv predmeta</th>
            <th class="text-center">Semestar</th>
            <th class="text-center">ECTS</th>
            <th class="text-center">Tip</th>
            <th class="text-end">Akcija</th>
          </tr>
        </thead>
        <tbody>
          {
            courses.map((course) => (
              <tr>
                <td>
                  <span class="font-monospace text-muted">{course.code}</span>
                </td>
                <td>
                  <a
                    href={base + '/examples/course-details'}
                    class="text-decoration-none fw-bold text-dark"
                  >
                    {course.name}
                  </a>
                </td>
                <td class="text-center">{course.semester}</td>
                <td class="text-center">{course.ects}</td>
                <td class="text-center">
                  <span
                    class={`badge ${course.type === 'Obavezni' ? 'bg-primary' : 'bg-secondary'}`}
                  >
                    {course.type}
                  </span>
                </td>
                <td class="text-end">
                  <a
                    href={base + '/examples/course-details'}
                    class="btn btn-sm btn-outline-primary"
                  >
                    Detalji
                  </a>
                </td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>
  </div>
</PageLayout>
