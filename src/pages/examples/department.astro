import PageLayout from '../../layouts/PageLayout.astro';
import InfoWidget from '../../components/InfoWidget.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import PageHeader from '../../components/PageHeader.astro';
import ContentCard from '../../components/ContentCard.astro';
import CardGroup from '../../components/CardGroup.astro';
import ContactWidget from '../../components/ContactWidget.astro';
import DocumentWidget from '../../components/DocumentWidget.astro';
import SimpleListItem from '../../components/SimpleListItem.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Odsjeci', href: '#' },
  { label: 'Odsjek za računarstvo i informatiku', href: '#', active: true }
];
---

<PageLayout title="Odsjek za računarstvo i informatiku | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Banner Slot -->
  <PageHeader 
    slot="banner"
    title="Odsjek za računarstvo i informatiku" 
    subtitle="Organizacioni dio Elektrotehničkog fakulteta" 
    bgClass="bg-dark"
  />

  <!-- Left Sidebar (Quick Links) -->
  <div class="col-lg-3 order-lg-1 mb-4 mb-lg-0">
    <InfoWidget title="Brzi linkovi" icon="bi-link-45deg" class="mb-4">
      <SimpleListItem label="Osoblje Odsjeka" link="/examples/staff-list" />
      <SimpleListItem label="Studijski programi" link="/examples/study-program-list" />
      <SimpleListItem label="Predmeti" link="/examples/course-list" />
      <SimpleListItem label="Laboratorije" link="/examples/lab-list" />
      <SimpleListItem label="Istraživačke grupe" link="/examples/lab-list" />
      <SimpleListItem label="Projekti" link="/examples/project-list" />
      <SimpleListItem label="Novosti" link="/examples/news-list" />
      <SimpleListItem label="Događaji" link="/examples/event-list" />
    </InfoWidget>

    <DocumentWidget
      title="Dokumenti Odsjeka"
      icon="bi-file-earmark-text"
      documents={[
        { title: 'Godišnji izvještaj 2023', size: '2.4 MB', format: 'PDF', link: '#' },
        { title: 'Plan rada 2024', size: '1.1 MB', format: 'PDF', link: '#' },
        { title: 'Pravilnik o radu', size: '500 KB', format: 'PDF', link: '#' }
      ]}
    />
  </div>

  <!-- Main Content -->
  <div class="col-md-9">
    <div class="mb-5">
      <SectionHeader title="O Odsjeku" />
      <p class="lead">Odsjek za računarstvo i informatiku je najveći odsjek na Elektrotehničkom fakultetu u Sarajevu, posvećen obrazovanju vrhunskih stručnjaka u oblasti softverskog inženjeringa, vještačke inteligencije i informacionih sistema.</p>
      <p>Naša misija je pružiti studentima teoretska znanja i praktične vještine potrebne za uspješnu karijeru u dinamičnom svijetu tehnologije. Kroz saradnju sa industrijom i učešće u međunarodnim projektima, osiguravamo da je naš nastavni plan i program usklađen sa najnovijim trendovima.</p>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
    </div>

    <div class="row mb-5">
      <div class="col-md-6">
        <ContactWidget
          title="Rukovodstvo Odsjeka"
          icon="bi-person-badge"
          class="h-100"
          contacts={[
            { 
              name: 'Dr. Šef Odsjeka', 
              role: 'Šef Odsjeka', 
              email: 'sef.ri@etf.unsa.ba', 
              phone: '+387 33 123 456' 
            }
          ]}
        />
      </div>
      <div class="col-md-6">
        <ContactWidget
          title="Sekretarijat"
          icon="bi-building"
          class="h-100"
          contacts={[
            { 
              name: 'Ime Prezime', 
              role: 'Sekretar Odsjeka', 
              email: 'sekretar.ri@etf.unsa.ba', 
              phone: '+387 33 123 457' 
            }
          ]}
        />
      </div>
    </div>

    <div class="mb-5">
      <SectionHeader title="Studijski programi" level="h3" />
      <CardGroup cols={3}>
        <div class="col">
          <ContentCard
            title="Računarstvo i informatika (RI)"
            href="/examples/study-program"
            excerpt="Prvi ciklus studija (Bachelor), 3 godine, 180 ECTS."
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Softversko inženjerstvo (SI)"
            href="/examples/study-program"
            excerpt="Drugi ciklus studija (Master), 2 godine, 120 ECTS."
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Data Science"
            href="/examples/study-program"
            excerpt="Treći ciklus studija (Doktorski), 3 godine, 180 ECTS."
            layout="vertical"
          />
        </div>
      </CardGroup>
    </div>

    <div class="mb-5">
      <SectionHeader title="Laboratorije" level="h3" />
      <CardGroup cols={2}>
        <div class="col">
          <ContentCard
            title="Laboratorija za Vještačku Inteligenciju"
            href="#"
            excerpt="Istraživanje u oblastima mašinskog učenja, obrade prirodnog jezika i računarske vizije."
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Laboratorija za Softverski Inženjering"
            href="#"
            excerpt="Fokus na metodologije razvoja softvera, kvalitet softvera i agilne procese."
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Laboratorija za Računarsku Grafiku"
            href="#"
            excerpt="Razvoj naprednih tehnika vizualizacije i 3D modeliranja."
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Laboratorija za Baze Podataka"
            href="#"
            excerpt="Istraživanje sistema za upravljanje bazama podataka i Big Data tehnologija."
            layout="vertical"
          />
        </div>
      </CardGroup>
    </div>

    <div class="mb-5">
      <SectionHeader title="Istraživačke grupe" level="h3" />
      <CardGroup cols={3}>
        <div class="col">
          <ContentCard
            title="Data Science Group"
            href="#"
            excerpt="Napredna analitika podataka i prediktivno modeliranje."
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Cyber Security Group"
            href="#"
            excerpt="Sigurnost mrežnih sistema i kriptografija."
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="IoT Research Group"
            href="#"
            excerpt="Internet of Things, pametni gradovi i senzorske mreže."
            layout="vertical"
          />
        </div>
      </CardGroup>
    </div>
    <div class="mb-5">
      <SectionHeader title="Projekti" level="h3" />
      <CardGroup cols={2}>
        <div class="col">
          <ContentCard
            title="AI for Healthcare"
            href="/examples/project-single"
            excerpt="Primjena metoda mašinskog učenja u dijagnostici i personaliziranoj medicini."
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Smart City Traffic"
            href="/examples/project-single"
            excerpt="Optimizacija saobraćaja u urbanim sredinama korištenjem IoT senzora."
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Green Energy Grid"
            href="/examples/project-single"
            excerpt="Upravljanje distribucijom električne energije iz obnovljivih izvora."
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Cyber Defense System"
            href="/examples/project-single"
            excerpt="Razvoj naprednih sistema za detekciju i prevenciju cyber napada."
            layout="vertical"
          />
        </div>
      </CardGroup>
    </div>
  </div>
</PageLayout>
