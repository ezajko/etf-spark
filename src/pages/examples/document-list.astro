import PageLayout from '../../layouts/PageLayout.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Fakultet', href: '#' },
  { label: 'Dokumenti', href: '#', active: true }
];

const documents = [
  {
    title: 'Odluka o usvajanju nastavnog plana i programa za I ciklus studija',
    date: '15.01.2024',
    type: 'Odluka',
    number: '01-123/24',
    size: '2.5 MB'
  },
  {
    title: 'Zapisnik sa 5. redovne sjednice NNV-a',
    date: '10.01.2024',
    type: 'Zapisnik',
    number: '02-456/24',
    size: '1.8 MB'
  },
  {
    title: 'Pravilnik o disciplinskoj odgovornosti studenata',
    date: '20.12.2023',
    type: 'Pravilnik',
    number: '03-789/23',
    size: '3.2 MB'
  },
  {
    title: 'Konkurs za izbor u akademska zvanja',
    date: '01.12.2023',
    type: 'Konkurs',
    number: '04-101/23',
    size: '1.5 MB'
  },
  {
    title: 'Odluka o visini školarine za akademsku 2023/2024. godinu',
    date: '15.09.2023',
    type: 'Odluka',
    number: '01-555/23',
    size: '1.2 MB'
  }
];

const base = import.meta.env.BASE_URL;
---

<PageLayout title="Dokumenti | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Main Content -->
  <div class="col-lg-8">
    <h1 class="mb-4">Arhiva Dokumenata</h1>
    
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-body bg-light">
        <form class="row g-3">
          <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Pretraga po nazivu...">
          </div>
          <div class="col-md-4">
            <select class="form-select">
              <option selected>Svi tipovi</option>
              <option value="1">Odluke</option>
              <option value="2">Zapisnici</option>
              <option value="3">Pravilnici</option>
            </select>
          </div>
          <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i></button>
          </div>
        </form>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th scope="col" style="width: 50%;">Naziv dokumenta</th>
            <th scope="col">Tip</th>
            <th scope="col">Datum</th>
            <th scope="col" class="text-end">Akcija</th>
          </tr>
        </thead>
        <tbody>
          {documents.map(doc => (
            <tr>
              <td>
                <a href={base + "/examples/document-single"} class="text-decoration-none fw-bold text-dark d-block mb-1">
                  <i class="bi bi-file-earmark-text me-2 text-primary"></i> {doc.title}
                </a>
                <small class="text-muted">Broj: {doc.number}</small>
              </td>
              <td><span class="badge bg-light text-dark border">{doc.type}</span></td>
              <td>{doc.date}</td>
              <td class="text-end">
                <a href="#" class="btn btn-sm btn-outline-primary" title="Preuzmi">
                  <i class="bi bi-download"></i>
                </a>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="mt-4">
      <ul class="pagination justify-content-center">
        <li class="page-item disabled"><a class="page-link" href="#">Prethodna</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Sljedeća</a></li>
      </ul>
    </nav>
  </div>

  <!-- Right Sidebar -->
  <div class="col-lg-4">
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-white border-bottom fw-bold py-3">
        Kategorije
      </div>
      <div class="list-group list-group-flush">
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Odluke <span class="badge bg-primary rounded-pill">124</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Pravilnici <span class="badge bg-primary rounded-pill">45</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Zapisnici NNV-a <span class="badge bg-primary rounded-pill">89</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Konkursi <span class="badge bg-primary rounded-pill">12</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Izvještaji <span class="badge bg-primary rounded-pill">34</span>
        </a>
      </div>
    </div>

    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white border-bottom fw-bold py-3">
        Najnovije
      </div>
      <div class="list-group list-group-flush">
        <a href="#" class="list-group-item list-group-item-action">
          <div class="d-flex w-100 justify-content-between">
            <h6 class="mb-1 text-truncate" style="max-width: 200px;">Odluka o imenovanju komisije</h6>
            <small class="text-muted">Jučer</small>
          </div>
          <small class="text-muted">Broj: 01-125/24</small>
        </a>
        <a href="#" class="list-group-item list-group-item-action">
          <div class="d-flex w-100 justify-content-between">
            <h6 class="mb-1 text-truncate" style="max-width: 200px;">Izvještaj o radu za 2023.</h6>
            <small class="text-muted">Prije 2 dana</small>
          </div>
          <small class="text-muted">Broj: 05-001/24</small>
        </a>
      </div>
    </div>
  </div>
</PageLayout>
