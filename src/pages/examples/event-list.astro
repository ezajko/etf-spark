import PageLayout from '../../layouts/PageLayout.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Aktuelnosti', href: '#' },
  { label: 'Događaji', href: '#', active: true }
];

const events = [
  {
    title: 'Dan otvorenih vrata ETF-a',
    date: '15.05.2024',
    time: '10:00 - 14:00',
    location: 'Kampus Univerziteta',
    category: 'Promocija',
    image: '/images/etf-building.png',
    description: 'Pozivamo sve buduće studente da posjete naš fakultet, upoznaju se sa studijskim programima i obiđu laboratorije.'
  },
  {
    title: 'Gostujuće predavanje: AI u Industriji 4.0',
    date: '22.05.2024',
    time: '12:00 - 13:30',
    location: 'Amfiteatar "Mladen Deželić"',
    category: 'Nastava',
    image: '/images/project-smart-city.png',
    description: 'Predavanje stručnjaka iz vodeće IT kompanije o primjeni vještačke inteligencije u modernoj industriji.'
  },
  {
    title: 'Sajam zapošljavanja "JobFair 2024"',
    date: '05.06.2024',
    time: '09:00 - 17:00',
    location: 'Hol Fakulteta',
    category: 'Karijera',
    image: '/images/news-graduation.png',
    description: 'Povežite se sa najboljim poslodavcima u IT sektoru i pronađite svoju prvu praksu ili posao.'
  },
  {
    title: 'Radionica: Cyber Security Basics',
    date: '12.06.2024',
    time: '14:00 - 16:00',
    location: 'Laboratorija 0-01',
    category: 'Radionica',
    image: '/images/project-smart-city.png',
    description: 'Praktična radionica o osnovama cyber sigurnosti i zaštite podataka na internetu.'
  }
];
---

<PageLayout title="Događaji | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Main Content -->
  <div class="col-lg-8">
    <h1 class="mb-4">Nadolazeći događaji</h1>
    
    <div class="d-flex flex-column gap-4">
      {events.map(item => (
        <div class="card border-0 shadow-sm overflow-hidden">
          <div class="row g-0">
            <div class="col-md-4 position-relative">
              <img src={item.image} class="img-fluid rounded-start h-100 object-fit-cover" alt={item.title} style="min-height: 200px;">
              <div class="position-absolute top-0 start-0 bg-primary text-white p-2 text-center" style="width: 60px; opacity: 0.9;">
                <span class="d-block fw-bold fs-4 lh-1">{item.date.split('.')[0]}</span>
                <span class="d-block small text-uppercase">{['JAN','FEB','MAR','APR','MAJ','JUN','JUL','AUG','SEP','OKT','NOV','DEC'][parseInt(item.date.split('.')[1])-1]}</span>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card-body h-100 d-flex flex-column">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <span class="badge bg-light text-primary border">{item.category}</span>
                  <small class="text-muted"><i class="bi bi-clock me-1"></i> {item.time}</small>
                </div>
                <h5 class="card-title mb-2"><a href="/examples/event-single" class="text-decoration-none text-dark">{item.title}</a></h5>
                <p class="card-text text-muted small mb-3"><i class="bi bi-geo-alt me-1"></i> {item.location}</p>
                <p class="card-text text-muted flex-grow-1">{item.description}</p>
                <div class="mt-auto">
                   <a href="/examples/event-single" class="btn btn-sm btn-outline-primary">Detalji i registracija</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="mt-5">
      <ul class="pagination justify-content-center">
        <li class="page-item disabled"><a class="page-link" href="#">Prethodna</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">Sljedeća</a></li>
      </ul>
    </nav>
  </div>

  <!-- Right Sidebar -->
  <div class="col-lg-4">
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-white border-bottom fw-bold py-3">
        Kategorije događaja
      </div>
      <div class="list-group list-group-flush">
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Konferencije <span class="badge bg-primary rounded-pill">3</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Radionice <span class="badge bg-primary rounded-pill">5</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Gostujuća predavanja <span class="badge bg-primary rounded-pill">2</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Sajmovi <span class="badge bg-primary rounded-pill">1</span>
        </a>
      </div>
    </div>

    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white border-bottom fw-bold py-3">
        Kalendar
      </div>
      <div class="card-body text-center">
        <!-- Simple Static Calendar Placeholder -->
        <div class="table-responsive">
            <table class="table table-sm table-borderless mb-0">
                <thead>
                    <tr>
                        <th class="text-muted small">Pon</th>
                        <th class="text-muted small">Uto</th>
                        <th class="text-muted small">Sri</th>
                        <th class="text-muted small">Čet</th>
                        <th class="text-muted small">Pet</th>
                        <th class="text-muted small">Sub</th>
                        <th class="text-muted small">Ned</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-muted">29</td>
                        <td class="text-muted">30</td>
                        <td>1</td>
                        <td>2</td>
                        <td>3</td>
                        <td>4</td>
                        <td>5</td>
                    </tr>
                    <tr>
                        <td>6</td>
