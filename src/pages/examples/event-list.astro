import SectionRightSidebar from '../../layouts/SectionRightSidebar.astro';
import ContentCard from '../../components/ContentCard.astro';
import InfoWidget from '../../components/InfoWidget.astro';
import KeyValueListItem from '../../components/KeyValueListItem.astro';
import CalendarWidget from '../../components/CalendarWidget.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Aktuelnosti', href: '#' },
  { label: 'Događaji', href: '#', active: true },
];

const events = [
  {
    title: 'Dan otvorenih vrata ETF-a',
    date: '15.05.2024',
    time: '10:00 - 14:00',
    location: 'Kampus Univerziteta',
    category: 'Promocija',
    image: '/images/etf-building.png',
    description:
      'Pozivamo sve buduće studente da posjete naš fakultet, upoznaju se sa studijskim programima i obiđu laboratorije.',
  },
  {
    title: 'Gostujuće predavanje: AI u Industriji 4.0',
    date: '22.05.2024',
    time: '12:00 - 13:30',
    location: 'Amfiteatar "Mladen Deželić"',
    category: 'Nastava',
    image: '/images/project-smart-city.png',
    description:
      'Predavanje stručnjaka iz vodeće IT kompanije o primjeni vještačke inteligencije u modernoj industriji.',
  },
  {
    title: 'Sajam zapošljavanja "JobFair 2024"',
    date: '05.06.2024',
    time: '09:00 - 17:00',
    location: 'Hol Fakulteta',
    category: 'Karijera',
    image: '/images/news-graduation.png',
    description:
      'Povežite se sa najboljim poslodavcima u IT sektoru i pronađite svoju prvu praksu ili posao.',
  },
  {
    title: 'Radionica: Cyber Security Basics',
    date: '12.06.2024',
    time: '14:00 - 16:00',
    location: 'Laboratorija 0-01',
    category: 'Radionica',
    image: '/images/project-smart-city.png',
    description: 'Praktična radionica o osnovama cyber sigurnosti i zaštite podataka na internetu.',
  },
];
---

<SectionRightSidebar title="Događaji | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Main Content -->

  <h1 class="mb-4">Nadolazeći događaji</h1>

  <div class="d-flex flex-column gap-4">
    {
      events.map((item) => (
        <ContentCard
          title={item.title}
          href="/examples/event-single"
          image={item.image}
          category={item.category}
          date={item.date}
          time={item.time}
          location={item.location}
          excerpt={item.description}
          isEvent={true}
          layout="horizontal"
        />
      ))
    }
  </div>

  <!-- Pagination -->
  <nav aria-label="Page navigation" class="mt-5">
    <ul class="pagination justify-content-center">
      <li class="page-item disabled"><a class="page-link" href="#">Prethodna</a></li>
      <li class="page-item active"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">Sljedeća</a></li>
    </ul>
  </nav>

  <!-- Sidebar -->
  <Fragment slot="sidebar">
    <!-- Categories Widget -->
    <InfoWidget title="Kategorije događaja" icon="bi-tags" class="mb-4">
      <KeyValueListItem
        label="Konferencije"
        value="3"
        badgeClass="bg-primary rounded-pill text-white"
      />
      <KeyValueListItem
        label="Radionice"
        value="5"
        badgeClass="bg-primary rounded-pill text-white"
      />
      <KeyValueListItem
        label="Gostujuća predavanja"
        value="2"
        badgeClass="bg-primary rounded-pill text-white"
      />
      <KeyValueListItem label="Sajmovi" value="1" badgeClass="bg-primary rounded-pill text-white" />
    </InfoWidget>

    <!-- Calendar Widget -->
    <CalendarWidget
      initialDate={new Date()}
      events={[
        { date: new Date(new Date().getFullYear(), new Date().getMonth(), 15), url: '#' },
        { date: new Date(new Date().getFullYear(), new Date().getMonth(), 22), url: '#' },
        { date: new Date(new Date().getFullYear(), new Date().getMonth(), 5), url: '#' },
      ]}
    />
  </Fragment>
</SectionRightSidebar>
