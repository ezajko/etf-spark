---

<PageLayout title="Događaji | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Main Content -->
  <div class="col-lg-8">
    <h1 class="mb-4">Nadolazeći događaji</h1>
    
    <div class="d-flex flex-column gap-4">
      {events.map(item => (
        <ContentCard
          title={item.title}
          href="/examples/event-single"
          image={item.image}
          category={item.category}
          date={item.date}
          time={item.time}
          location={item.location}
          excerpt={item.description}
          isEvent={true}
          layout="horizontal"
        />
      ))}
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="mt-5">
      <ul class="pagination justify-content-center">
        <li class="page-item disabled"><a class="page-link" href="#">Prethodna</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">Sljedeća</a></li>
      </ul>
    </nav>
  </div>

  <!-- Right Sidebar -->
  <div class="col-lg-4">
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-white border-bottom fw-bold py-3">
        Kategorije događaja
      </div>
      <div class="list-group list-group-flush">
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Konferencije <span class="badge bg-primary rounded-pill">3</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Radionice <span class="badge bg-primary rounded-pill">5</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Gostujuća predavanja <span class="badge bg-primary rounded-pill">2</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Sajmovi <span class="badge bg-primary rounded-pill">1</span>
        </a>
      </div>
    </div>

    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white border-bottom fw-bold py-3">
        Kalendar
      </div>
      <div class="card-body text-center">
        <!-- Simple Static Calendar Placeholder -->
        <div class="table-responsive">
            <table class="table table-sm table-borderless mb-0">
                <thead>
                    <tr>
                        <th class="text-muted small">Pon</th>
                        <th class="text-muted small">Uto</th>
                        <th class="text-muted small">Sri</th>
