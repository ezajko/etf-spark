import PageLayout from '../../layouts/PageLayout.astro';
import ContentCard from '../../components/ContentCard.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Aktuelnosti', href: '#' },
  { label: 'Događaji', href: '#', active: true }
];

const events = [
  {
    title: 'Dan otvorenih vrata ETF-a',
    date: '15.05.2024',
    time: '10:00 - 14:00',
    location: 'Kampus Univerziteta',
    category: 'Promocija',
    image: '/images/etf-building.png',
    description: 'Pozivamo sve buduće studente da posjete naš fakultet, upoznaju se sa studijskim programima i obiđu laboratorije.'
  },
  {
    title: 'Gostujuće predavanje: AI u Industriji 4.0',
    date: '22.05.2024',
    time: '12:00 - 13:30',
    location: 'Amfiteatar "Mladen Deželić"',
    category: 'Nastava',
    image: '/images/project-smart-city.png',
