import SectionRightSidebar from '../../layouts/SectionRightSidebar.astro';
import InfoWidget from '../../components/InfoWidget.astro';

import KeyValueListItem from '../../components/KeyValueListItem.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Aktuelnosti', href: '#' },
  { label: 'Događaji', href: '/examples/event-list' },
  { label: 'Dan otvorenih vrata ETF-a', href: '#', active: true },
];

const base = import.meta.env.BASE_URL;
---

<SectionRightSidebar title="Dan otvorenih vrata | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Main Content -->
  <div class="mb-4">
    <span class="badge bg-primary mb-2">Promocija</span>
    <h1 class="fw-bold mb-3">Dan otvorenih vrata ETF-a</h1>
    <p class="lead text-muted">
      Pridružite nam se na godišnjem Danu otvorenih vrata i otkrijte svijet mogućnosti koje nudi
      Elektrotehnički fakultet.
    </p>
  </div>

  <img
    src={base + '/images/etf-building.png'}
    class="img-fluid rounded mb-4 w-100"
    alt="ETF Zgrada"
  />

  <div class="mb-5">
    <h3>O događaju</h3>
    <p>
      Dan otvorenih vrata je jedinstvena prilika za sve srednjoškolce, njihove roditelje i
      nastavnike da posjete naš fakultet i iz prve ruke saznaju sve o studiranju na ETF-u. Očekuje
      vas bogat program koji uključuje prezentacije studijskih programa, obilazak laboratorija,
      razgovor sa profesorima i studentima, te demonstracije studentskih projekata.
    </p>
    <p>
      Cilj događaja je približiti nauku i tehnologiju mladima i inspirisati ih da postanu inženjeri
      budućnosti.
    </p>
  </div>

  <div class="mb-5">
    <h3>Agenda</h3>
    <div class="list-group">
      <div class="list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">10:00 - 10:30</h5>
          <small class="text-muted">Amfiteatar</small>
        </div>
        <p class="mb-1 fw-bold">Pozdravni govor Dekana</p>
        <small>Uvodna riječ i prezentacija fakulteta.</small>
      </div>
      <div class="list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">10:30 - 12:00</h5>
          <small class="text-muted">Hol Fakulteta</small>
        </div>
        <p class="mb-1 fw-bold">Sajam studijskih programa</p>
        <article>
          <div class="mb-4">
            <span class="badge bg-primary rounded-pill px-3 py-2">Category</span>
          </div>

          <h1 class="display-4 fw-bold mb-4">Lorem Ipsum Event Title</h1>

          <div class="row g-4 mb-5">
            <div class="col-md-6 col-lg-3">
              <div class="d-flex align-items-center p-3 h-100 bg-body-tertiary rounded-3">
                <i class="bi bi-calendar3 fs-3 text-primary me-3"></i>
                <div>
                  <small
                    class="text-muted d-block text-uppercase fw-bold"
                    style="font-size: 0.7rem;">Date</small
                  >
                  <span class="fw-medium">May 15, 2024</span>
                </div>
              </div>
            </div>
            <div class="col-md-6 col-lg-3">
              <div class="d-flex align-items-center p-3 h-100 bg-body-tertiary rounded-3">
                <i class="bi bi-clock fs-3 text-primary me-3"></i>
                <div>
                  <small
                    class="text-muted d-block text-uppercase fw-bold"
                    style="font-size: 0.7rem;">Time</small
                  >
                  <span class="fw-medium">10:00 - 14:00</span>
                </div>
              </div>
            </div>
            <div class="col-md-6 col-lg-3">
              <div class="d-flex align-items-center p-3 h-100 bg-body-tertiary rounded-3">
                <i class="bi bi-geo-alt fs-3 text-primary me-3"></i>
                <div>
                  <small
                    class="text-muted d-block text-uppercase fw-bold"
                    style="font-size: 0.7rem;">Location</small
                  >
                  <span class="fw-medium">Some Location</span>
                </div>
              </div>
            </div>
            <div class="col-md-6 col-lg-3">
              <a
                href="#"
                class="btn btn-primary w-100 h-100 d-flex align-items-center justify-content-center fw-bold rounded-3"
              >
                <i class="bi bi-ticket-perforated me-2"></i> Register
              </a>
            </div>
          </div>

          <figure class="mb-5">
            <img
              src="/images/etf-building.png"
              class="img-fluid rounded-4 shadow-sm w-100"
              alt="Event Image"
            />
          </figure>

          <div class="row">
            <div class="col-lg-8">
              <h2 class="h3 mb-4">About the Event</h2>
              <div class="fs-5 text-body-secondary mb-5">
                <p class="mb-4">
                  Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor
                  incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                  exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                </p>
                <p class="mb-4">
                  Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu
                  fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in
                  culpa qui officia deserunt mollit anim id est laborum.
                </p>
                <ul>
                  <li>List item one</li>
                  <li>List item two</li>
                  <li>List item three</li>
                </ul>
              </div>
            </div>

            <div class="col-lg-4">
              <div class="card border-0 shadow-sm bg-body-tertiary">
                <div class="card-body">
                  <h5 class="card-title fw-bold mb-3">Organizer</h5>
                  <p class="mb-4">Lorem Ipsum Organization</p>

                  <h6 class="fw-bold mb-2">Contact</h6>
                  <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                      <i class="bi bi-envelope me-2 text-primary"></i>
                      <a href="mailto:info@example.com" class="text-decoration-none"
                        >info@example.com</a
                      >
                    </li>
                    <li><i class="bi bi-telephone me-2 text-primary"></i> +123 456 789</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </article>

        <!-- Right Sidebar -->
        <Fragment slot="sidebar">
          <InfoWidget title="Informacije" icon="bi-info-circle" class="mb-4">
            <KeyValueListItem label="Datum" value="15. Maj 2024." icon="bi-calendar-event" />
            <KeyValueListItem label="Vrijeme" value="10:00 - 14:00" icon="bi-clock" />
            <KeyValueListItem label="Lokacija" value="Kampus Univerziteta" icon="bi-geo-alt" />
            <KeyValueListItem
              label="Ulaz"
              value="Besplatan"
              icon="bi-ticket-perforated"
              badgeClass="bg-success rounded-pill text-white"
            />

            <div class="mt-3">
              <a href="#" class="btn btn-primary w-100 mb-2">Registrujte se</a>
              <a href="#" class="btn btn-outline-secondary w-100">
                <i class="bi bi-calendar-plus me-2"></i> Dodaj u kalendar
              </a>
            </div>
          </InfoWidget>

          <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom fw-bold py-3">
              <i class="bi bi-map me-2"></i>Lokacija
            </div>
            <div class="card-body p-0">
              <!-- Static Map Placeholder -->
              <div
                class="bg-light d-flex align-items-center justify-content-center text-muted"
                style="height: 250px;"
              >
                <div class="text-center">
                  <i class="bi bi-map fs-1 mb-2"></i>
                  <p class="mb-0">Google Maps Placeholder</p>
                </div>
              </div>
            </div>
          </div>
        </Fragment>
      </div>
    </div>
  </div>
</SectionRightSidebar>
