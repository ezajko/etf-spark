import PageLayout from '../../layouts/PageLayout.astro';
import PageHeader from '../../components/PageHeader.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import InfoWidget from '../../components/InfoWidget.astro';
import ContactWidget from '../../components/ContactWidget.astro';
import DocumentWidget from '../../components/DocumentWidget.astro';
import SimpleListItem from '../../components/SimpleListItem.astro';
import ContentCard from '../../components/ContentCard.astro';
import CardGroup from '../../components/CardGroup.astro';
import IconListItem from '../../components/IconListItem.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Odsjeci', href: '#' },
  { label: 'Odsjek za računarstvo i informatiku', href: '/examples/department' },
  { label: 'Laboratorije', href: '/examples/lab-list' },
  { label: 'Laboratorija za Vještačku Inteligenciju', href: '#', active: true }
];
---

<PageLayout title="Laboratorija za Vještačku Inteligenciju | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Banner Slot -->
  <PageHeader 
    slot="banner"
    title="Laboratorija za Vještačku Inteligenciju" 
    subtitle="Artificial Intelligence Laboratory (AILab)" 
    bgClass="bg-primary"
  />

  <!-- Left Sidebar -->
  <div class="col-lg-3 order-lg-1 mb-4 mb-lg-0">
    <InfoWidget title="Informacije" icon="bi-info-circle" class="mb-4">
      <SimpleListItem label="Odsjek: Računarstvo i informatika" icon="bi-diagram-3" />
      <SimpleListItem label="Lokacija: Kabinet 3-15" icon="bi-geo-alt" />
      <SimpleListItem label="Web: ailab.etf.unsa.ba" icon="bi-globe" link="#" />
    </InfoWidget>

    <ContactWidget
      title="Voditelj Laboratorije"
      icon="bi-person-badge"
      class="mb-4"
      contacts={[
        { 
          name: 'Dr. Ime Prezime', 
          role: 'Redovni profesor', 
          email: 'ime.prezime@etf.unsa.ba', 
          phone: '+387 33 123 456' 
        }
      ]}
    />

    <DocumentWidget
      title="Dokumenti"
      icon="bi-file-earmark-text"
      documents={[
        { title: 'Godišnji izvještaj 2023', size: '1.2 MB', format: 'PDF', link: '#' },
        { title: 'Lista opreme', size: '500 KB', format: 'PDF', link: '#' },
        { title: 'Pravilnik o radu laboratorije', size: '300 KB', format: 'PDF', link: '#' }
      ]}
    />
  </div>

  <!-- Main Content -->
  <div class="col-md-9">
    <!-- About Section -->
    <div class="mb-5">
      <SectionHeader title="O Laboratoriji" />
      <p class="lead">Laboratorija za vještačku inteligenciju (AILab) je centar izvrsnosti posvećen istraživanju i razvoju naprednih tehnologija u oblasti vještačke inteligencije, mašinskog učenja i kognitivnih sistema.</p>
      <p>Naš cilj je unaprijediti razumijevanje inteligentnih sistema i njihovu primjenu u rješavanju kompleksnih problema u industriji, medicini i društvu. Kroz interdisciplinarni pristup, povezujemo teorijska istraživanja sa praktičnim primjenama, stvarajući inovativna rješenja koja oblikuju budućnost tehnologije.</p>
    </div>

    <!-- Research Areas -->
    <div class="mb-5">
      <SectionHeader title="Istraživačke oblasti" level="h3" />
      <div class="d-flex flex-wrap gap-2">
        <span class="badge bg-light text-dark border p-2">Mašinsko učenje</span>
        <span class="badge bg-light text-dark border p-2">Duboko učenje</span>
        <span class="badge bg-light text-dark border p-2">Računarska vizija</span>
        <span class="badge bg-light text-dark border p-2">Obrada prirodnog jezika (NLP)</span>
        <span class="badge bg-light text-dark border p-2">Robotika</span>
        <span class="badge bg-light text-dark border p-2">Ekspertni sistemi</span>
      </div>
    </div>

    <!-- Projects -->
    <div class="mb-5">
      <SectionHeader title="Aktuelni projekti" level="h3" />
      <CardGroup cols={2}>
        <div class="col">
          <ContentCard
            title="AI for Healthcare"
            href="/examples/project-single"
            excerpt="Razvoj dijagnostičkih alata baziranih na dubokom učenju za rano otkrivanje bolesti."
            layout="horizontal"
            icon="bi-heart-pulse"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Autonomous Navigation"
            href="/examples/project-single"
            excerpt="Sistemi za autonomnu navigaciju robota u nepoznatim okruženjima."
            layout="horizontal"
            icon="bi-robot"
          />
        </div>
      </CardGroup>
    </div>

    <!-- Team Members -->
    <div class="mb-5">
      <SectionHeader title="Članovi tima" level="h3" />
      <div class="list-group list-group-flush border rounded">
        <IconListItem 
          icon="bi-person" 
          value="Dr. Ime Prezime" 
          label="Voditelj laboratorije / Redovni profesor"
          link="/examples/staff-profile"
          class="px-3 py-3"
        />
        <IconListItem 
          icon="bi-person" 
          value="Dr. Član Tima 1" 
          label="Viši asistent / Istraživač"
          link="/examples/staff-profile"
          class="px-3 py-3"
        />
        <IconListItem 
          icon="bi-person" 
          value="Mr. Član Tima 2" 
          label="Asistent / Doktorant"
          link="/examples/staff-profile"
          class="px-3 py-3"
        />
        <IconListItem 
          icon="bi-person" 
          value="Student Istraživač" 
          label="Student master studija"
          link="#"
          class="px-3 py-3"
        />
      </div>
    </div>

    <!-- Equipment/Resources (Optional) -->
    <div class="mb-5">
      <SectionHeader title="Resursi i Oprema" level="h3" />
      <div class="row">
        <div class="col-md-6">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><i class="bi bi-hdd-network me-2 text-primary"></i> GPU Cluster za treniranje modela</li>
            <li class="list-group-item"><i class="bi bi-robot me-2 text-primary"></i> Robotske ruke (x2)</li>
          </ul>
        </div>
        <div class="col-md-6">
           <ul class="list-group list-group-flush">
            <li class="list-group-item"><i class="bi bi-eye me-2 text-primary"></i> Sistemi za računarsku viziju</li>
            <li class="list-group-item"><i class="bi bi-laptop me-2 text-primary"></i> Radne stanice visokih performansi</li>
          </ul>
        </div>
      </div>
    </div>

  </div>
</PageLayout>
