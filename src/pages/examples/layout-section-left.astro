---
// ETF UNSA - Section Layout Example (Left Sidebar)
// Author: Ernedin Zajko <ezajko@root.ba>

import SidebarLeft from '../../layouts/SidebarLeft.astro';
import SlotPlaceholder from '../../components/debug/SlotPlaceholder.astro';
import SectionLinksMenu from '../../components/SectionLinksMenu.astro';

const sectionLinks = [
  { label: 'Opšte informacije', link: '#', active: true },
  { label: 'Historijat', link: '#' },
  { label: 'Misija i vizija', link: '#' },
  { label: 'Organizacija', link: '#' },
  { label: 'Akti i propisi', link: '#' },
];

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Layouts', href: '#' },
  { label: 'Section Left Sidebar', href: '#', active: true },
];
---

<SidebarLeft
  title="Primjer Generičke Stranice (Lijevo) | ETF UNSA"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Odsjek za automatiku"
  bannerSubtitle="Primjer stranice sa lijevim sidebarom"
  bannerBgClass="bg-dark"
  bannerSize="xs"
>
  <!-- Content Before Slot -->
  <SlotPlaceholder slot="content-before" name="content-before" minHeight="80px" color="info" />

  <!-- Sidebar Content with Widgets -->
  <Fragment slot="sidebar">
    <SectionLinksMenu links={sectionLinks} class="mb-4" />
    <SlotPlaceholder name="widget slots (empty)" minHeight="200px" color="warning" />
  </Fragment>

  <!-- Banner Slot -->
  <SlotPlaceholder slot="banner" name="banner" minHeight="15rem" />

  <!-- Main Content -->
  <SlotPlaceholder name="main content" minHeight="600px" />

  <!-- Content After Slot -->
  <SlotPlaceholder slot="content-after" name="content-after" minHeight="80px" color="info" />
</SidebarLeft>
