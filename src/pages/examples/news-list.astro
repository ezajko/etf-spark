import SectionRightSidebar from '../../layouts/SectionRightSidebar.astro';
import ContentCard from '../../components/ContentCard.astro';
import InfoWidget from '../../components/InfoWidget.astro';
import KeyValueListItem from '../../components/KeyValueListItem.astro';
import SimpleListItem from '../../components/SimpleListItem.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Aktuelnosti', href: '#' },
  { label: 'Vijesti', href: '#', active: true },
];

const news = [
  {
    title: 'Održana svečana promocija diplomanata i magistranata',
    date: '01.12.2023',
    category: 'Fakultet',
    excerpt:
      'U subotu je u Bosanskom kulturnom centru održana svečana promocija diplomanata i magistranata Univerziteta u Sarajevu.',
    image: '/images/news-graduation.png',
  },
  {
    title: 'Poziv za prijavu na Erasmus+ razmjenu',
    date: '28.11.2023',
    category: 'Međunarodna saradnja',
    excerpt:
      'Otvoren je konkurs za prijavu studenata za Erasmus+ razmjenu u ljetnom semestru 2023/2024. godine.',
    image: '/images/etf-building.png',
  },
  {
    title: 'Gostujuće predavanje iz oblasti Cyber Security',
    date: '25.11.2023',
    category: 'Nastava',
    excerpt:
      'Pozivamo sve studente da prisustvuju gostujućem predavanju stručnjaka iz industrije na temu Cyber Security izazova.',
    image: '/images/project-smart-city.png',
  },
  {
    title: 'Rezultati takmičenja u programiranju',
    date: '20.11.2023',
    category: 'Takmičenja',
    excerpt:
      'Studenti ETF-a ostvarili zapažene rezultate na regionalnom takmičenju u programiranju.',
    image: '/images/news-graduation.png',
  },
];

const base = import.meta.env.BASE_URL;
---

<SectionRightSidebar title="Vijesti | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Main Content -->

  <h1 class="mb-4">Arhiva Vijesti</h1>

  <div class="d-flex flex-column gap-4">
    {
      news.map((item) => (
        <ContentCard
          title={item.title}
          href={base + "/examples/news-single"}
          image={item.image}
          category={item.category}
          excerpt={item.excerpt}
          layout="horizontal"
        />
      ))
    }
  </div>

  <!-- Pagination -->
  <nav aria-label="Page navigation" class="mt-5">
    <ul class="pagination justify-content-center">
      <li class="page-item disabled"><a class="page-link" href="#">Prethodna</a></li>
      <li class="page-item active"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item"><a class="page-link" href="#">Sljedeća</a></li>
    </ul>
  </nav>

  <!-- Sidebar -->
  <Fragment slot="sidebar">
    <!-- Categories Widget -->
    <InfoWidget title="Kategorije" icon="bi-tags" class="mb-4">
      <KeyValueListItem
        label="Fakultet"
        value="14"
        badgeClass="bg-primary rounded-pill text-white"
      />
      <KeyValueListItem label="Nastava" value="8" badgeClass="bg-primary rounded-pill text-white" />
      <KeyValueListItem
        label="Obavještenja"
        value="21"
        badgeClass="bg-primary rounded-pill text-white"
      />
      <KeyValueListItem
        label="Međunarodna saradnja"
        value="5"
        badgeClass="bg-primary rounded-pill text-white"
      />
    </InfoWidget>

    <!-- Archive Widget -->
    <InfoWidget title="Arhiva" icon="bi-calendar3">
      <SimpleListItem label="Decembar 2023" icon="bi-chevron-right" link="#" />
      <SimpleListItem label="Novembar 2023" icon="bi-chevron-right" link="#" />
      <SimpleListItem label="Oktobar 2023" icon="bi-chevron-right" link="#" />
      <SimpleListItem label="Septembar 2023" icon="bi-chevron-right" link="#" />
    </InfoWidget>
  </Fragment>
</SectionRightSidebar>
