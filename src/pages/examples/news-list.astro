import PageLayout from '../../layouts/PageLayout.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Aktuelnosti', href: '#' },
  { label: 'Vijesti', href: '#', active: true }
];

const news = [
  {
    title: 'Održana svečana promocija diplomanata i magistranata',
    date: '01.12.2023',
    category: 'Fakultet',
    excerpt: 'U subotu je u Bosanskom kulturnom centru održana svečana promocija diplomanata i magistranata Univerziteta u Sarajevu.',
    image: '/images/news-graduation.png'
  },
  {
    title: 'Poziv za prijavu na Erasmus+ razmjenu',
    date: '28.11.2023',
    category: 'Međunarodna saradnja',
    excerpt: 'Otvoren je konkurs za prijavu studenata za Erasmus+ razmjenu u ljetnom semestru 2023/2024. godine.',
    image: '/images/etf-building.png'
  },
  {
    title: 'Gostujuće predavanje iz oblasti Cyber Security',
    date: '25.11.2023',
    category: 'Nastava',
    excerpt: 'Pozivamo sve studente da prisustvuju gostujućem predavanju stručnjaka iz industrije na temu Cyber Security izazova.',
    image: '/images/project-smart-city.png'
  },
  {
    title: 'Rezultati takmičenja u programiranju',
    date: '20.11.2023',
    category: 'Takmičenja',
    excerpt: 'Studenti ETF-a ostvarili zapažene rezultate na regionalnom takmičenju u programiranju.',
    image: '/images/news-graduation.png'
  }
];
---

<PageLayout title="Vijesti | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Main Content -->
  <div class="col-lg-8">
    <h1 class="mb-4">Arhiva Vijesti</h1>
    
    <div class="d-flex flex-column gap-4">
      {news.map(item => (
        <div class="card border-0 shadow-sm overflow-hidden">
          <div class="row g-0">
            <div class="col-md-4">
              <img src={item.image} class="img-fluid rounded-start h-100 object-fit-cover" alt={item.title} style="min-height: 200px;">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <span class="badge bg-light text-primary border">{item.category}</span>
                </div>
                <h5 class="card-title"><a href="/examples/news-single" class="text-decoration-none text-dark">{item.title}</a></h5>
                <p class="card-text text-muted">{item.excerpt}</p>
                <a href="/examples/news-single" class="btn btn-sm btn-outline-primary">Pročitaj više</a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="mt-5">
      <ul class="pagination justify-content-center">
        <li class="page-item disabled"><a class="page-link" href="#">Prethodna</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Sljedeća</a></li>
      </ul>
    </nav>
  </div>

  <!-- Right Sidebar -->
  <div class="col-lg-4">
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-white border-bottom fw-bold py-3">
        Kategorije
      </div>
      <div class="list-group list-group-flush">
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Fakultet <span class="badge bg-primary rounded-pill">14</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Nastava <span class="badge bg-primary rounded-pill">8</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Obavještenja <span class="badge bg-primary rounded-pill">21</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          Međunarodna saradnja <span class="badge bg-primary rounded-pill">5</span>
        </a>
      </div>
    </div>

    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white border-bottom fw-bold py-3">
        Arhiva
      </div>
      <div class="list-group list-group-flush">
        <a href="#" class="list-group-item list-group-item-action">Decembar 2023</a>
        <a href="#" class="list-group-item list-group-item-action">Novembar 2023</a>
        <a href="#" class="list-group-item list-group-item-action">Oktobar 2023</a>
        <a href="#" class="list-group-item list-group-item-action">Septembar 2023</a>
      </div>
    </div>
  </div>
</PageLayout>
