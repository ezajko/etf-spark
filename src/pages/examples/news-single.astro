import SectionRightSidebar from '../../layouts/SectionRightSidebar.astro';
import InfoWidget from '../../components/InfoWidget.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Aktuelnosti', href: '#' },
  { label: 'Vijesti', href: '/examples/news-list' },
  { label: 'Održana svečana promocija...', href: '#', active: true },
];

const base = import.meta.env.BASE_URL;
---

<SectionRightSidebar title="Vijest | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Main Content -->
  <article>
    <div class="mb-4">
      <span class="badge bg-primary mb-2">Fakultet</span>
      <h1 class="fw-bold mb-3">Održana svečana promocija diplomanata i magistranata</h1>
      <div class="text-muted small mb-3">
        <i class="bi bi-calendar3 me-2"></i> 01.12.2023. |
        <i class="bi bi-person me-2 ms-3"></i> Autor: Služba za odnose s javnošću
      </div>
      <p class="lead">
        U subotu je u Bosanskom kulturnom centru održana svečana promocija diplomanata i
        magistranata Univerziteta u Sarajevu, uključujući i studente Elektrotehničkog fakulteta.
      </p>
    </div>

    <img src={base + "/images/news-graduation.png"} class="img-fluid rounded mb-4 w-100" alt="Promocija" />

    <div class="content mb-5">
      <p>
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut
        labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco
        laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in
        voluptate velit esse cillum dolore eu fugiat nulla pariatur.
      </p>
      <p>
        Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit
        anim id est laborum. Sed ut perspiciatis unde omnis iste natus error sit voluptatem
        accusantium doloremque laudantium, totam rem aperiam.
      </p>
      <blockquote class="blockquote my-4 p-3 border-start border-4 border-primary bg-light">
        <p class="mb-0">
          "Ovo je veliki dan za naš fakultet i naše studente koji su pokazali izuzetno znanje i trud
          tokom studija."
        </p>
        <footer class="blockquote-footer mt-2">Dekan Fakulteta</footer>
      </blockquote>
      <p>
        Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia
        consequuntur magni dolores eos qui ratione voluptatem sequi nesciunt. Neque porro quisquam
        est, qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit.
      </p>
    </div>

    <div class="d-flex align-items-center justify-content-between border-top pt-4">
      <div class="d-flex gap-2">
        <span class="fw-bold me-2">Podijeli:</span>
        <a href="#" class="text-decoration-none text-secondary"
          ><i class="bi bi-facebook fs-5"></i></a
        >
        <a href="#" class="text-decoration-none text-secondary"
          ><i class="bi bi-twitter-x fs-5"></i></a
        >
        <a href="#" class="text-decoration-none text-secondary"
          ><i class="bi bi-linkedin fs-5"></i></a
        >
      </div>
    </div>
  </article>

  <!-- Right Sidebar -->
  <Fragment slot="sidebar">
    <InfoWidget title="Povezane vijesti" icon="bi-newspaper" class="mb-4">
      <a href="#" class="list-group-item list-group-item-action bg-transparent border-0 px-0 py-2">
        <div class="d-flex w-100 justify-content-between">
          <h6 class="mb-1 text-primary">Rezultati prijemnog ispita</h6>
          <small class="text-muted">3d</small>
        </div>
        <small class="text-muted">Nastava</small>
      </a>
      <hr class="my-1 dropdown-divider" />
      <a href="#" class="list-group-item list-group-item-action bg-transparent border-0 px-0 py-2">
        <div class="d-flex w-100 justify-content-between">
          <h6 class="mb-1 text-primary">Odluka o neradnim danima</h6>
          <small class="text-muted">5d</small>
        </div>
        <small class="text-muted">Obavještenja</small>
      </a>
      <hr class="my-1 dropdown-divider" />
      <a href="#" class="list-group-item list-group-item-action bg-transparent border-0 px-0 py-2">
        <div class="d-flex w-100 justify-content-between">
          <h6 class="mb-1 text-primary">Gostujuće predavanje</h6>
          <small class="text-muted">1w</small>
        </div>
        <small class="text-muted">Događaji</small>
      </a>
    </InfoWidget>
  </Fragment>
</SectionRightSidebar>
