import PageLayout from '../../layouts/PageLayout.astro';
import ContentCard from '../../components/ContentCard.astro';
import CardGroup from '../../components/CardGroup.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Istraživanje', href: '#' },
  { label: 'Projekti', href: '#', active: true }
];

const projects = [
  {
    title: 'Smart City IoT Infrastructure',
    category: 'EU Horizon 2020',
    status: 'U toku',
    description: 'Razvoj inteligentne infrastrukture za pametne gradove korištenjem IoT tehnologija i naprednih senzorskih mreža.',
    image: '/images/project-smart-city.png'
  },
  {
    title: 'AI for Healthcare Diagnostics',
    category: 'Nacionalni projekat',
    status: 'Završen',
    description: 'Primjena vještačke inteligencije u ranoj dijagnostici bolesti na osnovu medicinskih slika.',
    image: '/images/news-graduation.png'
  },
  {
    title: 'Green Energy Optimization',
    category: 'Industrijska saradnja',
    status: 'U toku',
    description: 'Optimizacija potrošnje energije u industrijskim postrojenjima korištenjem mašinskog učenja.',
    image: '/images/etf-building.png'
  },
  {
    title: 'Blockchain for Supply Chain',
    category: 'Istrazivački grant',
    status: 'Planiran',
    description: 'Istraživanje primjene blockchain tehnologije za osiguranje transparentnosti u lancu snabdijevanja.',
    image: '/images/project-smart-city.png'
  }
];
---

<PageLayout title="Projekti | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Main Content (Full Width) -->
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-5">
      <div>
        <h1 class="mb-2">Projekti</h1>
        <p class="text-muted lead mb-0">Pregled naučno-istraživačkih i razvojnih projekata.</p>
      </div>
      
      <div class="d-flex gap-2">
        <select class="form-select">
          <option>Svi programi</option>
          <option>Horizon 2020</option>
          <option>Erasmus+</option>
        </select>
        <select class="form-select">
          <option>Svi statusi</option>
          <option>U toku</option>
          <option>Završeni</option>
        </select>
      </div>
    </div>

    <CardGroup cols={2}>
      {projects.map(project => (
        <div class="col">
          <ContentCard
            title={project.title}
            href="/examples/project-single"
            image={project.image}
            category={project.category}
            excerpt={project.description}
            status={project.status}
            statusColor={project.status === 'U toku' ? 'success' : (project.status === 'Završen' ? 'secondary' : 'warning')}
            layout="horizontal"
          />
        </div>
      ))}
    </CardGroup>
  </div>
</PageLayout>
