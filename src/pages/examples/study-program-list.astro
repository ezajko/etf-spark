import PageLayout from '../../layouts/PageLayout.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Odsjeci', href: '#' },
  { label: 'Računarstvo i informatika', href: '/examples/department' },
  { label: 'Studijski programi', href: '#', active: true }
];

const programs = [
  {
    cycle: 'I Ciklus (Bachelor)',
    name: 'Računarstvo i informatika',
    duration: '3 Godine',
    ects: '180 ECTS',
    title: 'Bachelor inženjer elektrotehnike',
    link: '/examples/study-program'
  },
  {
    cycle: 'II Ciklus (Master)',
    name: 'Računarstvo i informatika',
    duration: '2 Godine',
    ects: '120 ECTS',
    title: 'Magistar inženjer elektrotehnike',
    link: '#'
  },
  {
    cycle: 'II Ciklus (Master)',
    name: 'Software Engineering (English)',
    duration: '2 Godine',
    ects: '120 ECTS',
    title: 'Master of Software Engineering',
    link: '#'
  },
  {
    cycle: 'III Ciklus (Doktorski)',
    name: 'Računarstvo i informatika',
    duration: '3 Godine',
    ects: '180 ECTS',
    title: 'Doktor tehničkih nauka',
    link: '#'
  }
];
---

<PageLayout title="Studijski programi | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <div class="col-12">
    <h1 class="mb-4">Studijski programi</h1>
    <p class="lead mb-5">Odsjek nudi programe na sva tri ciklusa studija, usklađene sa Bolonjskim procesom i potrebama tržišta rada.</p>
    
    <div class="d-flex flex-column gap-4">
      {programs.map(prog => (
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4">
            <div class="row align-items-center">
              <div class="col-md-8">
                <span class="badge bg-primary mb-2">{prog.cycle}</span>
                <h3 class="card-title mb-2"><a href={prog.link} class="text-decoration-none text-dark">{prog.name}</a></h3>
                <p class="text-muted mb-0">Zvanje: <span class="fw-bold">{prog.title}</span></p>
              </div>
              <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <div class="d-flex justify-content-md-end gap-3 mb-3">
                  <div class="text-center px-3 border-end">
                    <span class="d-block fw-bold fs-5">{prog.duration.split(' ')[0]}</span>
                    <small class="text-muted">Godine</small>
                  </div>
                  <div class="text-center px-3">
                    <span class="d-block fw-bold fs-5">{prog.ects.split(' ')[0]}</span>
                    <small class="text-muted">ECTS</small>
                  </div>
                </div>
                <a href={prog.link} class="btn btn-outline-primary">Detalji programa</a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</PageLayout>
