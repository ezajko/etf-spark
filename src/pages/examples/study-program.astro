import PageLayout from '../../layouts/PageLayout.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Studij', href: '#' },
  { label: 'Prvi ciklus', href: '#' },
  { label: 'Računarstvo i informatika', href: '#', active: true }
];
---

<PageLayout title="Računarstvo i informatika | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Banner Slot -->
  <section slot="banner" class="ez-hero ez-hero--small bg-primary text-white">
    <div class="ez-hero__content container">
      <div class="row align-items-center">
        <div class="col-lg-8">
          <span class="badge bg-white text-primary mb-2">Bachelor Program</span>
          <h1 class="ez-hero__title mb-2">Računarstvo i informatika</h1>
          <p class="ez-hero__subtitle text-white-50">Sveobuhvatno obrazovanje za digitalnu budućnost.</p>
        </div>
        <div class="col-lg-4 text-lg-end mt-4 mt-lg-0">
           <a href="#admission" class="btn btn-light text-primary fw-bold px-4 py-2">Apliciraj odmah</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <div class="col-lg-8">
    <!-- Overview -->
    <div class="mb-5">
      <h2 class="mb-4">Pregled programa</h2>
      <p class="lead">Studijski program Računarstvo i informatika (RI) dizajniran je da pruži studentima duboko razumijevanje teorijskih osnova i praktičnih vještina potrebnih za razvoj složenih softverskih sistema.</p>
      <p>Kroz kombinaciju predavanja, laboratorijskih vježbi i projektnog rada, studenti stiču kompetencije u oblastima kao što su softverski inženjering, vještačka inteligencija, baze podataka, računarske mreže i cyber sigurnost. Naš cilj je obrazovati inženjere koji su spremni odgovoriti na izazove moderne IT industrije i doprinijeti tehnološkom razvoju društva.</p>
    </div>

    <!-- Admission Requirements -->
    <div id="admission" class="mb-5">
      <h3 class="mb-4">Upis i uslovi</h3>
      <div class="card border-0 bg-light p-4">
        <div class="d-flex mb-3">
          <div class="flex-shrink-0">
            <i class="bi bi-check-circle-fill text-success fs-4"></i>
          </div>
          <div class="flex-grow-1 ms-3">
            <h5 class="mb-1">Srednjoškolsko obrazovanje</h5>
            <p class="mb-0 small">Završena četverogodišnja srednja škola sa odličnim ili vrlo dobrim uspjehom.</p>
          </div>
        </div>
        <div class="d-flex mb-3">
          <div class="flex-shrink-0">
            <i class="bi bi-check-circle-fill text-success fs-4"></i>
          </div>
          <div class="flex-grow-1 ms-3">
            <h5 class="mb-1">Prijemni ispit</h5>
            <p class="mb-0 small">Položen prijemni ispit iz matematike (min. 20 bodova).</p>
          </div>
        </div>
        <div class="d-flex">
          <div class="flex-shrink-0">
            <i class="bi bi-check-circle-fill text-success fs-4"></i>
          </div>
          <div class="flex-grow-1 ms-3">
            <h5 class="mb-1">Rang lista</h5>
            <p class="mb-0 small">Plasman unutar odobrene kvote za upis (Redovni / Redovni samofinansirajući).</p>
          </div>
        </div>
      </div>
      <div class="mt-3">
        <a href="#" class="text-decoration-none fw-bold">Pogledajte detaljan vodič za upis <i class="bi bi-arrow-right"></i></a>
      </div>
    </div>

    <!-- Curriculum -->
    <div class="mb-5">
      <h3 class="mb-4">Struktura studija</h3>
      <p class="mb-4">Studij traje 3 godine (6 semestara) i nosi ukupno 180 ECTS bodova. Nastava se odvija kroz predavanja, auditorne vježbe i laboratorijski rad.</p>
      
      <ul class="nav nav-tabs mb-3" id="curriculumTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="sem1-tab" data-bs-toggle="tab" data-bs-target="#sem1" type="button" role="tab">1. Godina</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="sem2-tab" data-bs-toggle="tab" data-bs-target="#sem2" type="button" role="tab">2. Godina</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="sem3-tab" data-bs-toggle="tab" data-bs-target="#sem3" type="button" role="tab">3. Godina</button>
        </li>
      </ul>
      
      <div class="tab-content border border-top-0 p-4 rounded-bottom" id="curriculumTabContent">
        <div class="tab-pane fade show active" id="sem1" role="tabpanel">
          <h5 class="mb-3 text-primary">Obavezni predmeti</h5>
          <div class="table-responsive">
            <table class="table table-sm table-hover">
              <thead>
                <tr>
                  <th>Predmet</th>
                  <th class="text-center">Semestar</th>
                  <th class="text-center">ECTS</th>
                </tr>
              </thead>
              <tbody>
                <tr><td>Matematika 1</td><td class="text-center">1</td><td class="text-center">7.0</td></tr>
                <tr><td>Osnove računarstva</td><td class="text-center">1</td><td class="text-center">6.0</td></tr>
                <tr><td>Fizika 1</td><td class="text-center">1</td><td class="text-center">6.0</td></tr>
                <tr><td>Linearna algebra i geometrija</td><td class="text-center">1</td><td class="text-center">5.0</td></tr>
                <tr><td>Uvod u programiranje</td><td class="text-center">1</td><td class="text-center">6.0</td></tr>
                <tr class="table-light"><td colspan="3" class="fw-bold text-center">Ukupno: 30 ECTS</td></tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="tab-pane fade" id="sem2" role="tabpanel">
           <p class="text-muted">Sadržaj za 2. godinu (3. i 4. semestar)...</p>
        </div>
        <div class="tab-pane fade" id="sem3" role="tabpanel">
           <p class="text-muted">Sadržaj za 3. godinu (5. i 6. semestar)...</p>
        </div>
      </div>
    </div>

    <!-- Career Prospects -->
    <div class="mb-5">
      <h3 class="mb-4">Karijerne mogućnosti</h3>
      <p>Diplomanti ovog studijskog programa su visoko traženi na tržištu rada. Moguće karijere uključuju:</p>
      <div class="row g-3">
        <div class="col-md-6">
          <ul class="list-group list-group-flush">
            <li class="list-group-item bg-transparent"><i class="bi bi-check2 text-primary me-2"></i> Software Engineer</li>
            <li class="list-group-item bg-transparent"><i class="bi bi-check2 text-primary me-2"></i> Web Developer (Frontend/Backend)</li>
            <li class="list-group-item bg-transparent"><i class="bi bi-check2 text-primary me-2"></i> Mobile App Developer</li>
          </ul>
        </div>
        <div class="col-md-6">
          <ul class="list-group list-group-flush">
            <li class="list-group-item bg-transparent"><i class="bi bi-check2 text-primary me-2"></i> Data Analyst / Scientist</li>
            <li class="list-group-item bg-transparent"><i class="bi bi-check2 text-primary me-2"></i> System Architect</li>
            <li class="list-group-item bg-transparent"><i class="bi bi-check2 text-primary me-2"></i> IT Consultant</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Sidebar -->
  <div class="col-lg-4">
    <!-- Key Facts Widget -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-primary text-white fw-bold py-3">
        <i class="bi bi-info-circle me-2"></i> Ukratko o programu
      </div>
      <div class="list-group list-group-flush">
        <div class="list-group-item d-flex justify-content-between align-items-center py-3">
          <span class="text-muted"><i class="bi bi-award me-2"></i> Zvanje</span>
          <span class="fw-bold text-end">Bachelor inženjer elektrotehnike</span>
        </div>
        <div class="list-group-item d-flex justify-content-between align-items-center py-3">
          <span class="text-muted"><i class="bi bi-clock me-2"></i> Trajanje</span>
          <span class="fw-bold">3 Godine (6 semestara)</span>
        </div>
        <div class="list-group-item d-flex justify-content-between align-items-center py-3">
          <span class="text-muted"><i class="bi bi-journal-bookmark me-2"></i> ECTS</span>
          <span class="fw-bold">180</span>
        </div>
        <div class="list-group-item d-flex justify-content-between align-items-center py-3">
          <span class="text-muted"><i class="bi bi-translate me-2"></i> Jezik</span>
          <span class="fw-bold">Bosanski / Engleski</span>
        </div>
        <div class="list-group-item d-flex justify-content-between align-items-center py-3">
          <span class="text-muted"><i class="bi bi-calendar-event me-2"></i> Početak</span>
          <span class="fw-bold">Oktobar (Zimski semestar)</span>
        </div>
      </div>
    </div>

    <!-- Contact Widget -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-white border-bottom fw-bold py-3">
        Kontakt i savjetovanje
      </div>
      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
            <i class="bi bi-person text-secondary fs-4"></i>
          </div>
          <div>
            <h6 class="mb-0">Studentska služba</h6>
            <small class="text-muted">Za pitanja o upisu i administraciji</small>
          </div>
        </div>
        <p class="card-text small mb-2"><i class="bi bi-envelope me-2 text-primary"></i> studentska.sluzba@etf.unsa.ba</p>
        <p class="card-text small mb-3"><i class="bi bi-telephone me-2 text-primary"></i> +387 33 250 700</p>
        <hr>
        <div class="d-flex align-items-center mb-3">
          <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
            <i class="bi bi-person-badge text-secondary fs-4"></i>
          </div>
          <div>
            <h6 class="mb-0">Dr. Šef Odsjeka</h6>
            <small class="text-muted">Akademski savjetnik</small>
          </div>
        </div>
        <p class="card-text small mb-0"><i class="bi bi-envelope me-2 text-primary"></i> sef.ri@etf.unsa.ba</p>
      </div>
    </div>

    <!-- Documents Widget -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white border-bottom fw-bold py-3">
        Dokumenti
      </div>
      <div class="list-group list-group-flush">
        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
          <i class="bi bi-file-earmark-pdf text-danger me-3 fs-5"></i>
          <div>
            <span class="d-block fw-bold">Nastavni plan i program</span>
            <small class="text-muted">PDF, 2.5 MB</small>
          </div>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
          <i class="bi bi-file-earmark-pdf text-danger me-3 fs-5"></i>
          <div>
            <span class="d-block fw-bold">Pravilnik o studiranju</span>
            <small class="text-muted">PDF, 1.2 MB</small>
          </div>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
          <i class="bi bi-file-earmark-text text-primary me-3 fs-5"></i>
          <div>
            <span class="d-block fw-bold">Informator za brucoše</span>
            <small class="text-muted">PDF, 5.0 MB</small>
          </div>
        </a>
      </div>
    </div>
  </div>
</PageLayout>
