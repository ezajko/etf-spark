---
// ETF UNSA - Columns Example
import ContentExampleLayout from '../../../layouts/ContentExampleLayout.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Tekst & Mediji', href: '#' },
  { label: 'Kolone', href: '#', active: true },
