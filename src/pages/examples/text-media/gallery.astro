---
// ETF UNSA - Gallery Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Tekst & Mediji', href: '#' },
  { label: 'Galerija', href: '#', active: true },
];

const galleryImages = [
  { src: 'https://placehold.co/600x400/EEE/31343C', title: 'Image 1' },
  { src: 'https://placehold.co/600x400/DDD/31343C', title: 'Image 2' },
  { src: 'https://placehold.co/600x400/CCC/31343C', title: 'Image 3' },
  { src: 'https://placehold.co/600x400/BBB/31343C', title: 'Image 4' },
  { src: 'https://placehold.co/600x400/AAA/31343C', title: 'Image 5' },
  { src: 'https://placehold.co/600x400/999/31343C', title: 'Image 6' },
];

const gridGallery3Code = `<div class="row g-3">
  <div class="col-sm-6 col-md-4">
    <div class="card h-100 border-0 shadow-sm">
      <a href="#" class="d-block text-decoration-none">
        <img src="..." class="card-img-top img-fluid rounded" alt="Image 1" />
      </a>
      <div class="card-body p-2 text-center">
        <small class="text-muted">Image 1</small>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-md-4">
    <div class="card h-100 border-0 shadow-sm">
      <a href="#" class="d-block text-decoration-none">
        <img src="..." class="card-img-top img-fluid rounded" alt="Image 2" />
      </a>
      <div class="card-body p-2 text-center">
        <small class="text-muted">Image 2</small>
      </div>
    </div>
  </div>
  <!-- More columns... -->
</div>`;

const gridGallery4Code = `<div class="row g-2">
  <div class="col-6 col-md-3">
    <a href="#" class="d-block position-relative overflow-hidden rounded group-hover-zoom">
      <img src="..." class="img-fluid w-100 shadow-sm" alt="Image 1" />
    </a>
  </div>
  <div class="col-6 col-md-3">
    <a href="#" class="d-block position-relative overflow-hidden rounded group-hover-zoom">
      <img src="..." class="img-fluid w-100 shadow-sm" alt="Image 2" />
    </a>
  </div>
  <!-- More columns... -->
</div>`;
---

<NoSidebar
  title="Galerija (Gallery)"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Galerija"
  bannerSubtitle="Primjer prikaza galerije slika koristeći Grid sistem"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Grid Gallery (3 Columns)"
        description="Galerija koristeći Bootstrap Grid sistem."
        code={gridGallery3Code}
      >
        <div class="row g-3">
          {
            galleryImages.map((img) => (
              <div class="col-sm-6 col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                  <a href="#" class="d-block text-decoration-none">
                    <img src={img.src} class="card-img-top img-fluid rounded" alt={img.title} />
                  </a>
                  <div class="card-body p-2 text-center">
                    <small class="text-muted">{img.title}</small>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </ExampleSnippet>

      <ExampleSnippet
        title="Grid Gallery (4 Columns)"
        description="Kompatknija galerija sa 4 kolone."
        code={gridGallery4Code}
      >
        <div class="row g-2">
          {
            galleryImages.slice(0, 4).map((img) => (
              <div class="col-6 col-md-3">
                <a
                  href="#"
                  class="d-block position-relative overflow-hidden rounded group-hover-zoom"
                >
                  <img src={img.src} class="img-fluid w-100 shadow-sm" alt={img.title} />
                </a>
              </div>
            ))
          }
        </div>
      </ExampleSnippet>
    </div>
  </div>
</NoSidebar>
