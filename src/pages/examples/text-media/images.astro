---
// ETF UNSA - Images Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Tekst & Mediji', href: '#' },
  { label: 'Slike', href: '#', active: true },
];

const responsiveImageCode = `<img
  src="https://placehold.co/800x400/EEE/31343C"
  class="img-fluid rounded"
  alt="Responsive image example"
/>`;

const thumbnailCode = `<img
  src="https://placehold.co/200x200/EEE/31343C"
  class="img-thumbnail"
  alt="Thumbnail image example"
/>`;

const alignmentImagesCode = `<div class="clearfix mb-3">
  <img
    src="https://placehold.co/200x200/EEE/31343C"
    class="rounded float-start me-3 mb-3"
    alt="Left aligned"
  />
  <p>
    Ova slika je poravnata lijevo (<code>.float-start</code>). Tekst teče oko nje.
  </p>
</div>

<div class="clearfix mb-3">
  <img
    src="https://placehold.co/200x200/EEE/31343C"
    class="rounded float-end ms-3 mb-3"
    alt="Right aligned"
  />
  <p>
    Ova slika je poravnata desno (<code>.float-end</code>). Tekst teče oko nje.
  </p>
</div>

<div class="text-center">
  <img
    src="https://placehold.co/300x200/EEE/31343C"
    class="rounded mx-auto d-block"
    alt="Centered image"
  />
  <p class="mt-2 text-muted">Centrirana slika</p>
</div>`;

const figureCode = `<figure class="figure">
  <img
    src="https://placehold.co/600x400/EEE/31343C"
    class="figure-img img-fluid rounded"
    alt="A generic square placeholder image."
  />
  <figcaption class="figure-caption">A caption for the above image.</figcaption>
</figure>`;
---

<NoSidebar
  title="Slike (Images)"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Slike"
  bannerSubtitle="Primjeri responsivnih slika, thumbnails-a i figura"
  bannerSize="xs"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Responsive Images (.img-fluid)"
        description="Slike sa klasom .img-fluid se prilagođavaju širini roditeljskog elementa."
        code={responsiveImageCode}
      />

      <ExampleSnippet
        title="Thumbnails (.img-thumbnail)"
        description="Dodajte okvir oko slike koristeći .img-thumbnail klasu."
        code={thumbnailCode}
      />

      <ExampleSnippet
        title="Poravnanje Slika"
        description="Float klase i text-alignment utility klase za pozicioniranje slika."
        code={alignmentImagesCode}
      />

      <ExampleSnippet
        title="Figure (Slika sa potpisom)"
        description="HTML5 figure i figcaption elementi sa Bootstrap stilovima."
        code={figureCode}
      />
    </div>
  </div>
</NoSidebar>
