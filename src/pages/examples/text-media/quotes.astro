---
// ETF UNSA - Quotes Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Tekst & Mediji', href: '#' },
  { label: 'Citati', href: '#', active: true },
];

const standardQuoteCode = `<blockquote class="blockquote">
  <p>A well-known quote, contained in a blockquote element.</p>
</blockquote>`;

const sourceCitationCode = `<figure>
  <blockquote class="blockquote">
    <p>Knowledge is power.</p>
  </blockquote>
  <figcaption class="blockquote-footer">
    Francis Bacon in <cite title="Source Title">Meditationes Sacrae</cite>
  </figcaption>
</figure>`;

const alignmentQuotesCode = `<figure class="text-center mb-4">
  <blockquote class="blockquote">
    <p>Center aligned quote.</p>
  </blockquote>
  <figcaption class="blockquote-footer">
    Someone famous in <cite title="Source Title">Source Title</cite>
  </figcaption>
</figure>

<figure class="text-end">
  <blockquote class="blockquote">
    <p>Right aligned quote.</p>
  </blockquote>
  <figcaption class="blockquote-footer">
    Someone famous in <cite title="Source Title">Source Title</cite>
  </figcaption>
</figure>`;

const pullQuoteCode = `<div class="row align-items-center">
  <div class="col-md-8">
    <p>
      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor
      incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
      exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
    </p>
    <p>
      Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat
      nulla pariatur.
    </p>
  </div>
  <div class="col-md-4">
    <blockquote class="blockquote border-start border-primary border-5 ps-3 py-2 bg-light">
      <p class="mb-0 fst-italic fs-5">
        "Ovo je primjer istaknutog pull-quote citata koji prekida tekst."
      </p>
    </blockquote>
  </div>
</div>`;
---

<NoSidebar
  title="Citati (Quotes)"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Citati"
  bannerSubtitle="Primjeri blockquote elemenata i citiranja izvora"
  bannerSize="xs"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Standardni Citat"
        description="Osnovni blockquote element."
        code={standardQuoteCode}
      />

      <ExampleSnippet
        title="Imenovanje Izvora"
        description="Dodavanje izvora citata koristeći <figcaption> i <cite>."
        code={sourceCitationCode}
      />

      <ExampleSnippet
        title="Poravnanje"
        description="Korištenje utility klasa za poravnanje citata."
        code={alignmentQuotesCode}
      />

      <ExampleSnippet
        title="Istaknuti Citati (Pull Quotes)"
        description="Primjer prilagođenog stila za isticanje citata unutar teksta."
        code={pullQuoteCode}
      />
    </div>
  </div>
</NoSidebar>
