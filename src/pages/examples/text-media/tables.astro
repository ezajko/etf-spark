---
// ETF UNSA - Tables Example
import ContentExampleLayout from '../../../layouts/ContentExampleLayout.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Tekst & Mediji', href: '#' },
  { label: 'Tabele', href: '#', active: true },
];
---

<ContentExampleLayout
  title="Tabele"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Tabele"
  bannerSubtitle="Primjeri stiliziranja tabela: striped, bordered, hover i responsive"
>
  <div class="row g-5">
    <!-- Basic & Striped -->
    <div class="col-12">
      <div class="p-4 border rounded shadow-sm bg-white">
        <h5 class="text-uppercase text-muted fw-bold mb-4 ls-1">Striped Rows (.table-striped)</h5>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Ime</th>
              <th scope="col">Prezime</th>
              <th scope="col">Korisničko ime</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td>Mark</td>
              <td>Otto</td>
              <td>@mdo</td>
            </tr>
            <tr>
              <th scope="row">2</th>
              <td>Jacob</td>
              <td>Thornton</td>
              <td>@fat</td>
            </tr>
            <tr>
              <th scope="row">3</th>
              <td>Larry</td>
              <td>the Bird</td>
              <td>@twitter</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Bordered -->
    <div class="col-md-6">
      <div class="p-4 border rounded shadow-sm bg-white h-100">
        <h5 class="text-uppercase text-muted fw-bold mb-4 ls-1">
          Bordered Table (.table-bordered)
        </h5>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">First</th>
              <th scope="col">Last</th>
              <th scope="col">Handle</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td>Mark</td>
              <td>Otto</td>
              <td>@mdo</td>
            </tr>
            <tr>
              <th scope="row">2</th>
              <td>Jacob</td>
              <td>Thornton</td>
              <td>@fat</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Hoverable -->
    <div class="col-md-6">
      <div class="p-4 border rounded shadow-sm bg-white h-100">
        <h5 class="text-uppercase text-muted fw-bold mb-4 ls-1">Hoverable Rows (.table-hover)</h5>
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">First</th>
              <th scope="col">Last</th>
              <th scope="col">Handle</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td>Mark</td>
              <td>Otto</td>
              <td>@mdo</td>
            </tr>
            <tr>
              <th scope="row">2</th>
              <td>Jacob</td>
              <td>Thornton</td>
              <td>@fat</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Responsive -->
    <div class="col-12">
      <div class="p-4 border rounded shadow-sm bg-white">
        <h5 class="text-uppercase text-muted fw-bold mb-4 ls-1">
          Responsive Table (.table-responsive)
        </h5>
        <p class="text-muted mb-3">
          Dodajte <code>.table-responsive</code> wrapper oko tabele za horizontalni skrol na manjim ekranima.
        </p>
        <div class="table-responsive">
          <table class="table text-nowrap">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Heading 1</th>
                <th scope="col">Heading 2</th>
                <th scope="col">Heading 3</th>
                <th scope="col">Heading 4</th>
                <th scope="col">Heading 5</th>
                <th scope="col">Heading 6</th>
                <th scope="col">Heading 7</th>
                <th scope="col">Heading 8</th>
                <th scope="col">Heading 9</th>
                <th scope="col">Heading 10</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
              </tr>
              <tr>
                <th scope="row">3</th>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
                <td>Cell content</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</ContentExampleLayout>
