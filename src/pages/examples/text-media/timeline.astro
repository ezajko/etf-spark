---
// ETF UNSA - Timeline Component Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Tekst & Mediji', href: '#' },
  { label: 'Timeline', href: '#', active: true },
];

const timelineCode = `<div class="timeline">
    <div class="timeline-item">
        <span class="timeline-date">Septembar 2023.</span>
        <h3 class="timeline-title">Početak akademske godine</h3>
        <div class="timeline-body">
            Prijem brucoša i početak nastave u zimskom semestru.
        </div>
    </div>
    <div class="timeline-item">
        <span class="timeline-date">Januar 2024.</span>
        <h3 class="timeline-title">Završni ispiti</h3>
        <div class="timeline-body">
            Period održavanja završnih ispita za zimski semestar.
        </div>
    </div>
    <div class="timeline-item">
        <span class="timeline-date">Februar 2024.</span>
        <h3 class="timeline-title">Početak ljetnog semestra</h3>
        <div class="timeline-body">
            Nastavak nastave u ljetnom semestru nakon kraće pauze.
        </div>
    </div>
</div>`;
---

<NoSidebar
  title="Timeline"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Timeline"
  bannerSubtitle="Komponenta za hronološki prikaz događaja ili koraka"
  bannerSize="xs"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Vertical Timeline"
        description="Standardni vertikalni timeline sa datumima i opisima."
        code={timelineCode}
      />
    </div>
  </div>
</NoSidebar>
