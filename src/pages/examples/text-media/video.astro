---
// ETF UNSA - Video Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Tekst & Mediji', href: '#' },
  { label: 'Video', href: '#', active: true },
];

const ratio16x9Code = `<div class="ratio ratio-16x9">
  <iframe
    src="https://www.youtube.com/embed/zpOULjyy-n8?rel=0"
    title="YouTube video"
    allowfullscreen></iframe>
</div>`;

const ratio4x3Code = `<div class="ratio ratio-4x3">
  <iframe
    src="https://www.youtube.com/embed/zpOULjyy-n8?rel=0"
    title="YouTube video"
    allowfullscreen></iframe>
</div>`;

const html5VideoCode = `<div class="ratio ratio-21x9">
  <video controls poster="https://placehold.co/800x400/333/EEE?text=Poster+Image">
    <source
      src="https://archive.org/download/BigBuckBunny_124/Content/big_buck_bunny_720p_surround.mp4"
      type="video/mp4"
    />
    Your browser does not support the video tag.
  </video>
</div>`;
---

<NoSidebar
  title="Video"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Video"
  bannerSubtitle="Primjeri responsivnog prikaza videa (YouTube, Vimeo, HTML5)"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="16x9 Aspect Ratio"
        description="Standardni format za većinu videa."
        code={ratio16x9Code}
      />

      <ExampleSnippet
        title="4x3 Aspect Ratio"
        description="Stariji TV format."
        code={ratio4x3Code}
      />

      <ExampleSnippet
        title="HTML5 Video Tag"
        description="Za lokalne video fajlove."
        code={html5VideoCode}
      />
    </div>
  </div>
</NoSidebar>
