import BaseLayout from '../layouts/BaseLayout.astro';
import HeroCarousel from '../components/HeroCarousel.astro';
import ContentCard from '../components/ContentCard.astro';
import ProgramCard from '../components/ProgramCard.astro';
import SimpleListItem from '../components/SimpleListItem.astro';
import Tabs from '../components/Tabs.astro';
---

<BaseLayout title="ETF UNSA - Početna stranica">
  <!-- Hero Carousel -->
  <HeroCarousel />

  <!-- News Section -->
  <section class="py-5">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Aktuelnosti</h2>
        <a href="/examples/news-list" class="btn btn-outline-primary btn-sm"
          >Sve vijesti <i class="bi bi-arrow-right ms-1"></i></a
        >
      </div>

      <!-- Categorized News Lists -->
      <div class="row g-4">
        <!-- Column 1: Konkursi -->
        <div class="col-lg-4">
          <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
            <h3 class="h4 mb-0 text-primary">Konkursi</h3>
            <a href="/examples/news-list" class="small text-decoration-none"
              >Svi konkursi <i class="bi bi-arrow-right"></i></a
            >
          </div>
          <div class="list-group list-group-flush">
            <SimpleListItem
              label="Konkurs za upis na treći ciklus studija 2023/2024"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Konkurs za izbor u zvanje nastavnika i saradnika"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Javni poziv za sufinansiranje naučno-istraživačkih projekata"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Rezultati konkursa za Erasmus+ razmjenu"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Odluka o poništenju dijela konkursa"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
          </div>
        </div>

        <!-- Column 2: Nastava -->
        <div class="col-lg-4">
          <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
            <h3 class="h4 mb-0 text-primary">Nastava</h3>
            <a href="/examples/news-list" class="small text-decoration-none"
              >Sve vijesti <i class="bi bi-arrow-right"></i></a
            >
          </div>
          <div class="list-group list-group-flush">
            <SimpleListItem
              label="Raspored ispita za januarsko-februarski rok"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Poziv za učešće na hackathonu 'CodeSmash'"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Obavijest o neradnim danima za Dan državnosti"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Rezultati parcijalnih ispita iz Matematike 1"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Otvorene prijave za studentsku praksu"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
          </div>
        </div>

        <!-- Column 3: Obavještenja -->
        <div class="col-lg-4">
          <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
            <h3 class="h4 mb-0 text-primary">Obavještenja</h3>
            <a href="/examples/news-list" class="small text-decoration-none"
              >Sva obavještenja <i class="bi bi-arrow-right"></i></a
            >
          </div>
          <div class="list-group list-group-flush">
            <SimpleListItem
              label="Gostujuće predavanje: AI u modernoj industriji"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Održana sjednica Nastavno-naučnog vijeća"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Prezentacija stipendija Vlade Francuske"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Nabavka nove laboratorijske opreme"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
            <SimpleListItem
              label="Posjeta delegacije sa Univerziteta u Grazu"
              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Events Section -->
  <section class="py-5 bg-light">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Događaji</h2>
        <a href="/examples/event-list" class="btn btn-outline-primary btn-sm"
          >Svi događaji <i class="bi bi-arrow-right ms-1"></i></a
        >
      </div>

      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <div class="col">
          <ContentCard
            title="Dan otvorenih vrata"
            href="/examples/event-single"
            date="15.05.2024"
            isEvent={true}
            time="10:00 - 14:00"
            location="Kampus ETF-a"
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Sajam zapošljavanja JobFair '24"
            href="/examples/event-single"
            date="22.05.2024"
            isEvent={true}
            time="09:00 - 17:00"
            location="Hol fakulteta"
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Radionica: Cyber Security"
            href="/examples/event-single"
            date="01.06.2024"
            isEvent={true}
            time="12:00"
            location="Sala S1"
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Sjednica NNV-a"
            href="/examples/event-single"
            date="05.06.2024"
            isEvent={true}
            time="11:00"
            location="Svečana sala"
            layout="vertical"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Study Programs Section with Tabs -->
  <section class="py-5">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Studijski programi</h2>
        <a href="/examples/study-program-list" class="btn btn-outline-primary btn-sm"
          >Svi programi <i class="bi bi-arrow-right ms-1"></i></a
        >
      </div>

      <Tabs
        id="studyProgramTabs"
        tabs={[
          { id: 'cycles', label: 'Po ciklusima', active: true },
          { id: 'fields', label: 'Po oblastima' },
        ]}
        class="mb-4"
      >
        <div class="tab-content" id="studyProgramTabsContent">
          <!-- Tab 1: By Cycles -->
          <div
            class="tab-pane fade show active"
            id="cycles"
            role="tabpanel"
            aria-labelledby="cycles-tab"
          >
            <div class="row row-cols-1 row-cols-md-3 g-4">
              <div class="col">
                <ContentCard
                  title="I Ciklus Studija"
                  href="/examples/study-program-list"
                  icon="bi-1-circle"
                  layout="vertical"
                  excerpt="Bachelor studij (180 ECTS). Steknite temeljna inženjerska znanja i pripremite se za tržište rada ili nastavak školovanja."
                  category="Bachelor"
                />
              </div>
              <div class="col">
                <ContentCard
                  title="II Ciklus Studija"
                  href="/examples/study-program-list"
                  icon="bi-2-circle"
                  layout="vertical"
                  excerpt="Master studij (120 ECTS). Specijalizirajte se u odabranoj oblasti i steknite napredna akademska i stručna znanja."
                  category="Master"
                />
              </div>
              <div class="col">
                <ContentCard
                  title="III Ciklus Studija"
                  href="/examples/study-program-list"
                  icon="bi-3-circle"
                  layout="vertical"
                  excerpt="Doktorski studij (180 ECTS). Uključite se u vrhunska naučna istraživanja i doprinesite razvoju novih tehnologija."
                  category="PhD"
                />
              </div>
            </div>
          </div>

          <!-- Tab 2: By Fields -->
          <div class="tab-pane fade" id="fields" role="tabpanel" aria-labelledby="fields-tab">
            <div class="row row-cols-1 row-cols-md-2 g-4">
              <div class="col">
                <ContentCard
                  title="Računarstvo i informatika"
                  href="/examples/study-program-list"
                  icon="bi-laptop"
                  layout="horizontal"
                  imagePosition="left"
                  excerpt="Studijski programi fokusirani na razvoj softvera, vještačku inteligenciju, nauku o podacima i informacione sisteme."
                  category="Oblast"
                />
              </div>
              <div class="col">
                <ContentCard
                  title="Elektrotehnika"
                  href="/examples/study-program-list"
                  icon="bi-lightning-charge"
                  layout="horizontal"
                  imagePosition="left"
                  excerpt="Programi iz oblasti automatike, elektronike, elektroenergetike i telekomunikacija. Spoj hardvera i sistema."
                  category="Oblast"
                />
              </div>
            </div>
          </div>
        </div>
      </Tabs>
    </div>
  </section>

  <!-- Departments Section -->
  <section class="py-5 bg-light">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Odsjeci</h2>
        <a href="/examples/department" class="btn btn-outline-primary btn-sm"
          >Više o odsjecima <i class="bi bi-arrow-right ms-1"></i></a
        >
      </div>

      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <div class="col">
          <ContentCard
            title="Računarstvo i informatika"
            href="/examples/department"
            icon="bi-laptop"
            layout="vertical"
            excerpt="Fokus na softversko inženjerstvo, vještačku inteligenciju i informacione sisteme."
          />
        </div>
        <div class="col">
          <ContentCard
            title="Automatika i elektronika"
            href="/examples/department"
            icon="bi-cpu"
            layout="vertical"
            excerpt="Istraživanje sistema upravljanja, robotike i elektronskih kola."
          />
        </div>
        <div class="col">
          <ContentCard
            title="Elektroenergetika"
            href="/examples/department"
            icon="bi-lightning-charge"
            layout="vertical"
            excerpt="Proizvodnja, prenos i distribucija električne energije."
          />
        </div>
        <div class="col">
          <ContentCard
            title="Telekomunikacije"
            href="/examples/department"
            icon="bi-broadcast"
            layout="vertical"
            excerpt="Razvoj komunikacijskih mreža, bežičnih tehnologija i obrade signala."
          />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
