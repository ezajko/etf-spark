              link="/examples/news-single"
              icon="bi-chevron-right"
              class="px-0"
            />
          </div>
        </div>

        <!-- Column 3: Obavještenja -->
        <div class="col-lg-4">
          <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
            <h3 class="h4 mb-0 text-primary">Obavještenja</h3>
