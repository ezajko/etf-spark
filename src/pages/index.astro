import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="ETF UNSA - Početna stranica">
  <!-- Hero Section -->
  <section class="hero-section bg-primary text-white py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-8">
          <h1 class="display-4 fw-bold mb-3">
            Elektrotehnički fakultet Univerziteta u Sarajevu
          </h1>
          <p class="lead mb-4">
            Vododeća obrazovna i naučno-istraživačka institucija u oblasti elektrotehnike, 
            računarstva i telekomunikacija.
          </p>
          <div class="d-flex gap-3">
            <a href="/studiji" class="ez-btn ez-btn--primary btn btn-light btn-lg">
              <i class="bi bi-book ez-btn__icon"></i>
              Studijski programi
            </a>
            <a href="/prijava" class="btn btn-outline-light btn-lg">
              <i class="bi bi-pencil-square me-2"></i>
              Upiši se
            </a>
          </div>
        </div>
        <div class="col-lg-4 d-none d-lg-block text-center">
          <i class="bi bi-cpu-fill" style="font-size: 10rem; opacity: 0.3;"></i>
        </div>
      </div>
    </div>
  </section>

  <!-- News Section -->
  <section class="py-5">
    <div class="container">
      <h2 class="mb-4">Najnovije vijesti</h2>
      <div class="row g-4">
        {[1, 2, 3].map((i) => (
          <div class="col-md-4">
            <div class="card h-100 shadow-sm">
              <img 
                src={`/images/news_${i === 3 ? 1 : i}.png`}
                class="card-img-top" 
                alt={`Vijest ${i}`}
              />
              <div class="card-body">
                <h5 class="card-title">Lorem Ipsum Dolor Sit</h5>
                <p class="card-text">
                  Lorem ipsum dolor sit amet, consectetur adipiscing elit. 
                  Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                </p>
                <a href={`/vijesti/${i}`} class="btn btn-outline-primary btn-sm">
                  Pročitaj više
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Departments Section -->
  <section class="py-5 bg-light">
    <div class="container">
      <h2 class="mb-4">Naši odsjeci</h2>
      <div class="row g-4">
        <div class="col-md-3">
          <div class="card h-100 shadow-sm">
            <img src="/images/dept_ae.png" class="card-img-top" alt="Automatika i elektronika" />
            <div class="card-body text-center">
              <h5 class="card-title">Automatika i elektronika</h5>
              <a href="/odsjeci/ae" class="btn btn-sm btn-outline-primary mt-2">Saznaj više</a>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card h-100 shadow-sm">
            <img src="/images/dept_ee.png" class="card-img-top" alt="Elektroenergetika" />
            <div class="card-body text-center">
              <h5 class="card-title">Elektroenergetika</h5>
              <a href="/odsjeci/ee" class="btn btn-sm btn-outline-primary mt-2">Saznaj više</a>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card h-100 shadow-sm">
            <img src="/images/dept_ri.png" class="card-img-top" alt="Računarstvo i informatika" />
            <div class="card-body text-center">
              <h5 class="card-title">Računarstvo i informatika</h5>
              <a href="/odsjeci/ri" class="btn btn-sm btn-outline-primary mt-2">Saznaj više</a>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card h-100 shadow-sm">
            <img src="/images/dept_tk.png" class="card-img-top" alt="Telekomunikacije" />
            <div class="card-body text-center">
              <h5 class="card-title">Telekomunikacije</h5>
              <a href="/odsjeci/tk" class="btn btn-sm btn-outline-primary mt-2">Saznaj više</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
