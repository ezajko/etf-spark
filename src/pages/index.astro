  <!-- Events Section -->
  <section class="py-5 bg-body-tertiary">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Događaji</h2>
        <a href={base + '/examples/event-list'} class="btn btn-outline-primary btn-sm"
          >Svi događaji <i class="bi bi-arrow-right ms-1"></i></a
        >
      </div>

      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <div class="col">
          <ContentCard
            title="Lorem Ipsum Event 1"
            href={base + '/examples/event-single'}
            date="15.05.2024"
            isEvent={true}
            time="10:00 - 14:00"
            location="Kampus ETF-a"
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Lorem Ipsum Event 2"
            href={base + '/examples/event-single'}
            date="22.05.2024"
            isEvent={true}
            time="09:00 - 17:00"
            location="Hol fakulteta"
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Lorem Ipsum Event 3"
            href={base + '/examples/event-single'}
            date="01.06.2024"
            isEvent={true}
            time="12:00"
            location="Sala S1"
            layout="vertical"
          />
        </div>
        <div class="col">
          <ContentCard
            title="Lorem Ipsum Event 4"
            href={base + '/examples/event-single'}
            date="05.06.2024"
            isEvent={true}
            time="11:00"
            location="Svečana sala"
            layout="vertical"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Study Programs Section with Tabs -->
  <section class="py-5">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Studijski programi</h2>
        <a href={base + '/examples/study-program-list'} class="btn btn-outline-primary btn-sm"
          >Svi programi <i class="bi bi-arrow-right ms-1"></i></a
        >
      </div>

      <Tabs
        id="studyProgramTabs"
        tabs={[
          { id: 'cycles', label: 'Po ciklusima', active: true },
          { id: 'fields', label: 'Po oblastima' },
        ]}
        class="mb-4"
      >
        <div class="tab-content" id="studyProgramTabsContent">
          <!-- Tab 1: By Cycles -->
          <TabItem id="cycles" active>
            <div class="row row-cols-1 row-cols-md-3 g-4">
              <div class="col">
                <ContentCard
                  title="Study Cycle I"
                  href={base + '/examples/study-program-list'}
                  icon="bi-1-circle"
                  layout="vertical"
                  excerpt="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                  category="Bachelor"
                />
              </div>
              <div class="col">
                <ContentCard
                  title="Study Cycle II"
                  href={base + '/examples/study-program-list'}
                  icon="bi-2-circle"
                  layout="vertical"
                  excerpt="Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                  category="Master"
                />
              </div>
              <div class="col">
                <ContentCard
                  title="Study Cycle III"
                  href={base + '/examples/study-program-list'}
                  icon="bi-3-circle"
                  layout="vertical"
                  excerpt="Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur."
                  category="PhD"
                />
              </div>
            </div>
          </TabItem>

          <!-- Tab 2: By Fields -->
          <TabItem id="fields">
            <div class="row row-cols-1 row-cols-md-2 g-4">
              <div class="col">
                <ContentCard
                  title="Računarstvo i informatika"
                  href={base + '/examples/study-program-list'}
                  icon="bi-laptop"
                  layout="horizontal"
                  imagePosition="left"
                  excerpt="Studijski programi fokusirani na razvoj softvera, vještačku inteligenciju, nauku o podacima i informacione sisteme."
                  category="Oblast"
                />
              </div>
              <div class="col">
                <ContentCard
                  title="Elektrotehnika"
                  href={base + '/examples/study-program-list'}
                  icon="bi-lightning-charge"
                  layout="horizontal"
                  imagePosition="left"
                  excerpt="Programi iz oblasti automatike, elektronike, elektroenergetike i telekomunikacija. Spoj hardvera i sistema."
                  category="Oblast"
                />
              </div>
            </div>
          </TabItem>
        </div>
      </Tabs>
    </div>
  </section>

  <!-- Departments Section -->
  <section class="py-5 bg-body-tertiary">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Odsjeci</h2>
        <a href={base + '/examples/department'} class="btn btn-outline-primary btn-sm"
          >Više o odsjecima <i class="bi bi-arrow-right ms-1"></i></a
