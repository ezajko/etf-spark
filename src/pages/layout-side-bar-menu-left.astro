import PageLayout from '../layouts/PageLayout.astro';
import SideMenu from '../components/navigation/SideMenu.astro';
import LoremIpsum from '../components/LoremIpsum.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Layouts', href: '#' },
  { label: 'Lijevi Meni (Tree)', href: '#', active: true }
];
---

<PageLayout title="Lijevi Meni | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <!-- Banner Slot -->
  <section slot="banner" class="ez-hero ez-hero--small bg-primary text-white">
    <div class="ez-hero__content container">
      <div class="row">
        <div class="col-lg-8">
          <h1 class="ez-hero__title mb-2">Lijevi Side Meni</h1>
          <p class="ez-hero__subtitle text-white-50">Primjer stranice sa višeslojnim menijem na lijevoj strani.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content Grid -->
  <div class="col-lg-3 mb-4 mb-lg-0 d-none d-lg-block">
    <SideMenu />
  </div>

  <div class="col-lg-9">
    <h2 class="mb-4">Glavni Sadržaj</h2>
    <p class="lead">
      Ova stranica koristi <code>SideMenu</code> komponentu koja podržava višeslojnu navigaciju (do 5 nivoa).
    </p>
    <hr class="my-4">
    <LoremIpsum />
  </div>
</PageLayout>
