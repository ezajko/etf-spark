interface Props {
  height?: 'full' | 'large' | 'medium' | 'small' | 'xs' | 'auto';
  backgroundImage?: string;
  overlay?: boolean;
  overlayClass?: string;
  class?: string;
  id?: string;
}

const {
  height = 'medium',
  backgroundImage,
  overlay = false,
  overlayClass,
  class: className,
  id,
} = Astro.props;

const heightMap: Record<string, string> = {
  xs: 'xs',
  medium: 'md',
  large: 'lg',
  full: 'xl', // or 100vh
  sm: 'sm',
  md: 'md',
  lg: 'lg',
  xl: 'xl',
};

const finalHeightClass =
  height !== 'auto' ? (heightMap[height] ? `hero-${heightMap[height]}` : `hero-${height}`) : '';
const style = backgroundImage ? `background-image: url('${backgroundImage}');` : '';
---

<section id={id} class={`hero ${finalHeightClass} ${className || ''}`} style={style}>
  {overlay && <div class={`hero-overlay ${overlayClass || ''}`} />}

  <div class="hero-content container">
    <slot />
  </div>
</section>
