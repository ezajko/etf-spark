import ImageListItem from '../lists/ImageListItem.astro';
import SidebarWidget from '../layout/SidebarWidget.astro';

interface Contact {
  name: string;
  role: string;
  email: string;
  phone?: string;
  avatarIcon?: string; // e.g. "bi-person"
  image?: string;
}

interface Props {
  title: string;
  icon?: string;
  contacts: Contact[];
  class?: string;
}

const { title, icon, contacts, class: className } = Astro.props;
---

<SidebarWidget title={title} icon={icon} class={className}>
  {
    contacts.map((contact, index) => (
      <>
        <ImageListItem
          label={contact.name}
          description={contact.role}
          imageSrc={contact.image || ''}
          class="mb-3"
        >
          <div class="small text-muted">{contact.email}</div>
          {contact.phone && (
            <small class="text-muted d-block mt-1">
              <i class="bi bi-telephone me-1 text-primary" /> {contact.phone}
            </small>
          )}
        </ImageListItem>
        {index < contacts.length - 1 && <hr class="my-3" />}
      </>
    ))
  }
</SidebarWidget>
