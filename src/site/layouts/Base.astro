import Header from '../components/navigation/Header.astro';
import Footer from '../components/layout/Footer.astro';
import '../../scss/_site.scss';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Elektrotehnički fakultet Univerziteta u Sarajevu',
  description = 'ETF UNSA - Vodeći fakultet za elektrotehniku, računarstvo i telekomunikacije',
} = Astro.props;
---

<!doctype html>
<html lang="bs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Custom SCSS -->
    <!-- _site.scss is imported in the frontmatter -->
  </head>
  <body class="d-flex flex-column min-vh-100">
    <a class="skip-link visually-hidden-focusable" href="#main-content"
      >Preskoči na glavni sadržaj</a
    >
    <Header />

    <!-- Main content slot - Child layouts must define <main> if appropriate -->
    <slot />

    <Footer />

    <!-- Bootstrap JS -->
    <script>
      import 'bootstrap/dist/js/bootstrap.bundle.min.js';
    </script>
  </body>
</html>
