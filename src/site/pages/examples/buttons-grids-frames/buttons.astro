---
// ETF UNSA - Buttons Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/common/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Buttons, Grids & Frames', href: '#' },
  { label: 'Buttons', href: '#', active: true },
];

const standardButtonsCode = `<button type="button" class="btn btn-primary">Primary</button>
<button type="button" class="btn btn-secondary">Secondary</button>
<button type="button" class="btn btn-success">Success</button>
<button type="button" class="btn btn-danger">Danger</button>
<button type="button" class="btn btn-warning">Warning</button>
<button type="button" class="btn btn-info">Info</button>
<button type="button" class="btn btn-light">Light</button>
<button type="button" class="btn btn-dark">Dark</button>
<button type="button" class="btn btn-link">Link</button>`;

const outlineButtonsCode = `<button type="button" class="btn btn-outline-primary">Primary</button>
<button type="button" class="btn btn-outline-secondary">Secondary</button>
<button type="button" class="btn btn-outline-success">Success</button>
<button type="button" class="btn btn-outline-danger">Danger</button>
<button type="button" class="btn btn-outline-warning">Warning</button>
<button type="button" class="btn btn-outline-info">Info</button>
<button type="button" class="btn btn-outline-light">Light</button>
<button type="button" class="btn btn-outline-dark">Dark</button>`;

const buttonSizesCode = `<div class="mb-2">
  <button type="button" class="btn btn-primary btn-lg">Large button</button>
  <button type="button" class="btn btn-secondary btn-lg">Large button</button>
</div>
<div>
  <button type="button" class="btn btn-primary btn-sm">Small button</button>
  <button type="button" class="btn btn-secondary btn-sm">Small button</button>
</div>`;

const disabledStateCode = `<button type="button" class="btn btn-primary" disabled>Primary button</button>
<button type="button" class="btn btn-secondary" disabled>Button</button>
<button type="button" class="btn btn-outline-primary" disabled>Primary button</button>
<button type="button" class="btn btn-outline-secondary" disabled>Button</button>`;
---

<NoSidebar
  title="Buttons"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Buttons"
  bannerSubtitle="Primjeri standardnih dugmadi, outline varijanti i veličina"
  bannerSize="xs"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Standard Buttons"
        description="Bootstrap uključuje nekoliko predefiniranih stilova dugmadi, svaki sa svojom semantičkom svrhom."
        code={standardButtonsCode}
      />

      <ExampleSnippet
        title="Outline Buttons"
        description="Kada vam je potrebno dugme, ali ne i teška pozadinska boja."
        code={outlineButtonsCode}
      />

      <ExampleSnippet
        title="Sizes"
        description="Želite veća ili manja dugmad? Dodajte .btn-lg ili .btn-sm."
        code={buttonSizesCode}
      />

      <ExampleSnippet
        title="Disabled State"
        description="Učinite dugmad neaktivnim dodavanjem boolean atributa disabled."
        code={disabledStateCode}
      />
    </div>
  </div>
</NoSidebar>
