---
// ETF UNSA - Grids Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/common/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Buttons, Grids & Frames', href: '#' },
  { label: 'Grids', href: '#', active: true },
];

const twoColumnCode = `<div class="container text-center">
  <div class="row">
    <div class="col-md-6 border bg-light p-3">Column 1</div>
    <div class="col-md-6 border bg-light p-3">Column 2</div>
  </div>
</div>`;

const threeColumnCode = `<div class="container text-center">
  <div class="row">
    <div class="col-md-4 border bg-light p-3">Column 1</div>
    <div class="col-md-4 border bg-light p-3">Column 2</div>
    <div class="col-md-4 border bg-light p-3">Column 3</div>
  </div>
</div>`;

const responsiveGridCode = `<div class="container text-center">
  <div class="row">
    <div class="col-12 col-md-8 border bg-light p-3">.col-12 .col-md-8</div>
    <div class="col-6 col-md-4 border bg-light p-3">.col-6 .col-md-4</div>
  </div>
  <div class="row">
    <div class="col-6 col-md-4 border bg-light p-3">.col-6 .col-md-4</div>
    <div class="col-6 col-md-4 border bg-light p-3">.col-6 .col-md-4</div>
    <div class="col-6 col-md-4 border bg-light p-3">.col-6 .col-md-4</div>
  </div>
</div>`;

const nestedGridCode = `<div class="container text-center">
  <div class="row">
    <div class="col-md-8 border bg-light p-3">
      Level 1: .col-md-8
      <div class="row">
        <div class="col-6 border bg-white p-2">Level 2: .col-6</div>
        <div class="col-6 border bg-white p-2">Level 2: .col-6</div>
      </div>
    </div>
    <div class="col-md-4 border bg-light p-3">Level 1: .col-md-4</div>
  </div>
</div>`;
---

<NoSidebar
  title="Grids"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Grids"
  bannerSubtitle="Primjeri Bootstrap grid sistema"
  bannerSize="xs"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Two Columns"
        description="Jednostavan raspored sa dvije kolone jednake širine."
        code={twoColumnCode}
      />

      <ExampleSnippet
        title="Three Columns"
        description="Raspored sa tri kolone jednake širine."
        code={threeColumnCode}
      />

      <ExampleSnippet
        title="Responsive Grid"
        description="Kombinujte klase za različite širine ekrana."
        code={responsiveGridCode}
      />

      <ExampleSnippet
        title="Nested Grid"
        description="Gridovi se mogu ugnijezditi unutar drugih gridova."
        code={nestedGridCode}
      />
    </div>
  </div>
</NoSidebar>
