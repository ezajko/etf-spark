---
// ETF UNSA - CTA Examples
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/common/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Poƒçetna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Containers & Interactive', href: '#' },
  { label: 'Call to Action', href: '#', active: true },
];

const simpleCtaCode = `<div class="cta cta-center">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">Ready to get started?</h2>
      <p class="cta-description">Join us today and experience the difference.</p>
      <a href="#" class="btn btn-primary btn-lg">Sign Up Now</a>
    </div>
  </div>
</div>`;

const inlineCtaCode = `<div class="cta cta-primary">
  <div class="container">
    <div class="cta-content d-flex flex-column flex-md-row justify-content-between align-items-center">
      <div class="mb-3 mb-md-0">
        <h2 class="cta-title mb-1">Stay updated with our newsletter</h2>
        <p class="cta-description mb-0">Subscribe to get the latest news and updates.</p>
      </div>
      <div class="d-flex gap-2">
        <input type="email" class="form-control" placeholder="Email address">
        <button class="btn btn-light text-primary fw-bold">Subscribe</button>
      </div>
    </div>
  </div>
</div>`;

const imageCtaCode = `<div class="cta cta-dark cta-center cta-md d-flex align-items-center">
  <img src="https://placehold.co/1200x400/333/999" class="position-absolute top-0 start-0 w-100 h-100 object-fit-cover opacity-50" alt="...">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title display-5">Explore Our Programs</h2>
      <p class="cta-description fs-4">Discover the perfect study program for your future career.</p>
      <a href="#" class="btn btn-light btn-lg px-5 fw-bold">View Programs</a>
    </div>
  </div>
</div>`;
---

<NoSidebar
  title="Call to Action"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Call to Action"
  bannerSubtitle="Sekcije za poziv na akciju (CTA)"
  bannerSize="xs"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Simple CTA"
        description="Jednostavna centrirana CTA sekcija."
        code={simpleCtaCode}
      />

      <ExampleSnippet
        title="Inline CTA"
        description="CTA sekcija sa formom u jednom redu."
        code={inlineCtaCode}
      />

      <ExampleSnippet
        title="Image Overlay CTA"
        description="CTA sekcija sa pozadinskom slikom."
        code={imageCtaCode}
      />
    </div>
  </div>
</NoSidebar>
