    type: 'Type 2',
    number: '02-002/23',
  },
  {
    title: 'Lorem Ipsum Document 3',
    category: 'Category 1',
    date: '01.10.2023.',
    size: '1.8 MB',
    format: 'PDF',
    description: 'Duis aute irure dolor in reprehenderit in voluptate velit.',
    type: 'Type 1',
    number: '03-003/23',
  },
  {
    title: 'Lorem Ipsum Document 4',
