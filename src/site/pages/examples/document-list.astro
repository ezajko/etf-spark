import ListStandard from '../../layouts/list/ListStandard.astro';
import Pagination from '../../components/navigation/Pagination.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Fakultet', href: '#' },
  { label: 'Dokumenti', href: '#', active: true },
];

const documents = [
  {
    title: 'Lorem Ipsum Document 1',
    category: 'Category 1',
    date: '20.10.2023.',
    size: '1.2 MB',
    format: 'PDF',
    description: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.',
    type: 'Type 1',
    number: '01-001/23',
  },
  {
    title: 'Lorem Ipsum Document 2',
    category: 'Category 2',
    date: '15.10.2023.',
    size: '2.4 MB',
    format: 'DOCX',
