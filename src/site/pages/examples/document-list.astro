const base = import.meta.env.BASE_URL;
---

<ListStandard
  title="Dokumenti | ETF UNSA"
  breadcrumbItems={breadcrumbItems}
  listTitle="Arhiva Dokumenata"
  totalPages={3}
  currentPage={1}
  bannerSize="xs"
>
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-body bg-light">
      <form class="row g-3">
        <div class="col-md-6">
          <input type="text" class="form-control" placeholder="Pretraga po nazivu..." />
        </div>
        <div class="col-md-4">
          <select class="form-select">
            <option selected>Svi tipovi</option>
            <option value="1">Odluke</option>
            <option value="2">Zapisnici</option>
            <option value="3">Pravilnici</option>
          </select>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i></button>
        </div>
      </form>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th scope="col" style="width: 50%;">Naziv dokumenta</th>
          <th scope="col">Tip</th>
          <th scope="col">Datum</th>
          <th scope="col" class="text-end">Akcija</th>
        </tr>
      </thead>
      <tbody>
        {
          documents.map((doc) => (
            <tr>
              <td>
                <a
                  href={base + '/examples/document-single'}
                  class="text-decoration-none fw-bold text-dark d-block mb-1"
                >
                  <i class="bi bi-file-earmark-text me-2 text-primary" /> {doc.title}
                </a>
                <small class="text-muted">Broj: {doc.number}</small>
              </td>
              <td>
                <span class="badge bg-light text-dark border">{doc.type}</span>
              </td>
              <td>{doc.date}</td>
              <td class="text-end">
                <a href="#" class="btn btn-sm btn-outline-primary" title="Preuzmi">
                  <i class="bi bi-download" />
                </a>
              </td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </div>

  <!-- Right Sidebar -->
  <Fragment slot="sidebar">
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-white border-bottom fw-bold py-3">Kategorije</div>
      <div class="list-group list-group-flush">
        <a
          href="#"
          class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
        >
          Odluke <span class="badge bg-primary rounded-pill">124</span>
        </a>
        <a
          href="#"
          class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
        >
          Pravilnici <span class="badge bg-primary rounded-pill">45</span>
        </a>
        <a
          href="#"
          class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
        >
          Zapisnici NNV-a <span class="badge bg-primary rounded-pill">89</span>
        </a>
        <a
          href="#"
          class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
        >
          Konkursi <span class="badge bg-primary rounded-pill">12</span>
        </a>
        <a
          href="#"
          class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
        >
          Izvještaji <span class="badge bg-primary rounded-pill">34</span>
        </a>
      </div>
    </div>

    <div class="card border-0 shadow-sm">
      <div class="card-header border-bottom fw-bold py-3">Najnovije</div>
      <div class="list-group list-group-flush">
        <a href="#" class="list-group-item list-group-item-action">
          <div class="d-flex w-100 justify-content-between">
            <h6 class="mb-1 text-truncate" style="max-width: 200px;">
              Odluka o imenovanju komisije
            </h6>
            <small class="text-muted">Jučer</small>
          </div>
          <small class="text-muted">Broj: 01-125/24</small>
        </a>
        <a href="#" class="list-group-item list-group-item-action">
          <div class="d-flex w-100 justify-content-between">
            <h6 class="mb-1 text-truncate" style="max-width: 200px;">Izvještaj o radu za 2023.</h6>
            <small class="text-muted">Prije 2 dana</small>
          </div>
          <small class="text-muted">Broj: 05-001/24</small>
        </a>
      </div>
    </div>
  </Fragment>
</ListStandard>
