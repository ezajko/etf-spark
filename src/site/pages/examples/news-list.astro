import ListStandard from '../../layouts/list/ListStandard.astro';
import Pagination from '../../components/navigation/Pagination.astro';
import ContentCard from '../../components/common/ContentCard.astro';
import InfoWidget from '../../components/widgets/InfoWidget.astro';
import KeyValueListItem from '../../components/lists/KeyValueListItem.astro';
import SimpleListItem from '../../components/lists/SimpleListItem.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Aktuelnosti', href: '#' },
  { label: 'Vijesti', href: '#', active: true },
];

const news = [
  {
    title: 'Lorem Ipsum News 2',
    date: 'Oct 18, 2023',
    category: 'Fakultet',
    excerpt:
      'Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.',
    image: '/images/news/news-2.jpg',
  },
  {
    title: 'Lorem Ipsum News 1',
    date: 'Oct 20, 2023',
    category: 'Međunarodna saradnja',
    excerpt:
      'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.',
    image: '/images/news/news-1.jpg',
  },
  {
    title: 'Lorem Ipsum News 3',
    date: 'Oct 15, 2023',
    category: 'Nastava',
    excerpt:
      'Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.',
    image: '/images/news/news-3.jpg',
  },
  {
    title: 'Lorem Ipsum News 4',
    date: 'Oct 10, 2023',
    category: 'Takmičenja',
    excerpt:
      'Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.',
    image: '/images/news/news-4.jpg',
  },
];

const base = import.meta.env.BASE_URL;
---

<ListStandard
  title="Vijesti | ETF UNSA"
  breadcrumbItems={breadcrumbItems}
  listTitle="Arhiva Vijesti"
  totalPages={5}
  currentPage={1}
  bannerSize="xs"
>
  {
    news.map((item) => (
      <ContentCard
        title={item.title}
        href={base + '/examples/news-single'}
        image={item.image}
        category={item.category}
        excerpt={item.excerpt}
        layout="horizontal"
      />
    ))
  }

  <!-- Sidebar -->
  <Fragment slot="sidebar">
    <!-- Categories Widget -->
    <InfoWidget title="Kategorije" icon="bi-tags" class="mb-4">
      <KeyValueListItem
        label="Fakultet"
        value="14"
        badgeClass="bg-primary rounded-pill text-white"
      />
      <KeyValueListItem label="Nastava" value="8" badgeClass="bg-primary rounded-pill text-white" />
      <KeyValueListItem
        label="Obavještenja"
        value="21"
        badgeClass="bg-primary rounded-pill text-white"
      />
      <KeyValueListItem
        label="Međunarodna saradnja"
        value="5"
        badgeClass="bg-primary rounded-pill text-white"
      />
    </InfoWidget>

    <!-- Archive Widget -->
    <InfoWidget title="Arhiva" icon="bi-calendar3">
      <SimpleListItem label="Decembar 2023" icon="bi-chevron-right" link="#" />
      <SimpleListItem label="Novembar 2023" icon="bi-chevron-right" link="#" />
      <SimpleListItem label="Oktobar 2023" icon="bi-chevron-right" link="#" />
      <SimpleListItem label="Septembar 2023" icon="bi-chevron-right" link="#" />
    </InfoWidget>
  </Fragment>
</ListStandard>
