import Project from '../../layouts/content/Project.astro';
import InfoWidget from '../../components/widgets/InfoWidget.astro';
import KeyValueListItem from '../../components/lists/KeyValueListItem.astro';
import ContactWidget from '../../components/widgets/ContactWidget.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Istraživanje', href: '#' },
  { label: 'Projekti', href: '/examples/project-list' },
  { label: 'Smart City IoT Infrastructure', href: '#', active: true },
];

const base = import.meta.env.BASE_URL;
---

<Project title="Smart City IoT | ETF UNSA" breadcrumbItems={breadcrumbItems}>
  <div class="card border-0 shadow-sm mb-5 overflow-hidden">
    <div class="position-relative" style="height: 300px;">
      <img
        src="/images/project-smart-city.png"
        class="w-100 h-100 object-fit-cover"
        alt="Project Image"
      />
      <div
        class="position-absolute bottom-0 start-0 w-100 bg-gradient-dark p-4 d-flex align-items-end"
        style="background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);"
      >
        <div class="text-white">
          <span class="badge bg-primary mb-2">International Project</span>
          <h1 class="h2 fw-bold mb-0">Lorem Ipsum Project Title</h1>
        </div>
      </div>
    </div>
    <div class="card-body p-4 p-lg-5">
      <div class="row">
        <div class="col-lg-8">
          <h3 class="h5 mb-3 fw-bold text-uppercase text-secondary">Project Description</h3>
          <p class="lead mb-4">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor
            incididunt ut labore et dolore magna aliqua.
          </p>
          <div class="text-muted mb-5">
            <p>
              Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex
              ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
              cillum dolore eu fugiat nulla pariatur.
            </p>
            <p>
              Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt
              mollit anim id est laborum. Sed ut perspiciatis unde omnis iste natus error sit
              voluptatem accusantium doloremque laudantium.
            </p>
          </div>

          <h3 class="h5 mb-3 fw-bold text-uppercase text-secondary">Objectives</h3>
          <ul class="list-check mb-5">
            <li class="mb-2">
              <i class="bi bi-check-circle-fill text-primary me-2"></i> Objective 1
            </li>
            <li class="mb-2">
              <i class="bi bi-check-circle-fill text-primary me-2"></i> Objective 2
            </li>
            <li class="mb-2">
              <i class="bi bi-check-circle-fill text-primary me-2"></i> Objective 3
            </li>
          </ul>
        </div>

        <div class="col-lg-4">
          <div class="bg-body-tertiary p-4 rounded-3">
            <h4 class="h5 fw-bold mb-4">Project Details</h4>

            <div class="mb-3">
              <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;"
                >Duration</small
              >
              <div class="fw-medium">2023 - 2025</div>
            </div>

            <div class="mb-3">
              <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;"
                >Funding</small
              >
              <div class="fw-medium">Program Name</div>
            </div>

            <div class="mb-3">
              <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;"
                >Coordinator</small
              >
              <div class="fw-medium">Organization Name</div>
            </div>

            <hr class="my-4" />

            <h5 class="h6 fw-bold mb-3">Project Team</h5>
            <div class="d-flex align-items-center mb-2">
              <div class="avatar avatar-sm me-2"><i class="bi bi-person"></i></div>
              <small>John Doe (Lead)</small>
            </div>
            <div class="d-flex align-items-center">
              <div class="avatar avatar-sm me-2"><i class="bi bi-person"></i></div>
              <small>Jane Smith</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mb-5">
    <h3>Partneri</h3>
    <div class="d-flex align-items-center gap-4 flex-wrap">
      <div class="bg-light p-3 rounded border text-center" style="width: 150px;">
        Partner 1 Logo
      </div>
      <div class="bg-light p-3 rounded border text-center" style="width: 150px;">
        Partner 2 Logo
      </div>
      <div class="bg-light p-3 rounded border text-center" style="width: 150px;">
        Partner 3 Logo
      </div>
    </div>
  </div>

  <!-- Right Sidebar -->
  <Fragment slot="sidebar">
    <InfoWidget title="Info o projektu" class="mb-4">
      <KeyValueListItem
        label="Status"
        value="U toku"
        badgeClass="bg-success rounded-pill"
        icon="bi-activity"
      />
      <KeyValueListItem label="Trajanje" value="2022 - 2025" icon="bi-calendar-event" />
      <KeyValueListItem label="Budžet" value="€ 1.5M" icon="bi-currency-euro" />
      <KeyValueListItem label="Koordinator" value="ETF Sarajevo" icon="bi-building" />
    </InfoWidget>

    <ContactWidget
      title="Projektni tim"
      class="mb-4"
      contacts={[
        {
          name: 'Dr. Ime Prezime',
          role: 'Voditelj projekta',
          email: 'voditelj@etf.unsa.ba',
          avatarIcon: 'bi-person',
        },
        {
          name: 'Dr. Član Tima',
          role: 'Istraživač',
          email: 'clan@etf.unsa.ba',
          avatarIcon: 'bi-person',
        },
      ]}
    />

    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Kontakt za medije</h5>
        <p class="card-text small">Za više informacija o projektu, molimo kontaktirajte nas.</p>
        <a href="#" class="btn btn-outline-primary btn-sm w-100">Kontaktirajte nas</a>
      </div>
    </div>
  </Fragment>
</Project>
