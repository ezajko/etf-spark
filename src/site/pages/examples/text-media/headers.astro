---
// ETF UNSA - Headers Example
import NoSidebar from '../../../layouts/NoSidebar.astro';
import ExampleSnippet from '../../../components/common/ExampleSnippet.astro';

const breadcrumbItems = [
  { label: 'Početna', href: '/' },
  { label: 'Primjeri', href: '#' },
  { label: 'Tekst & Mediji', href: '#' },
  { label: 'Naslovi', href: '#', active: true },
];

// Content Snippets
const standardHeadingsCode = `<h1>h1. Bootstrap heading</h1>
<h2>h2. Bootstrap heading</h2>
<h3>h3. Bootstrap heading</h3>
<h4>h4. Bootstrap heading</h4>
<h5>h5. Bootstrap heading</h5>
<h6>h6. Bootstrap heading</h6>`;

const secondaryTextCode = `<h3>
  Fancy display heading
  <small class="text-muted">With faded secondary text</small>
</h3>`;

const displayHeadingsCode = `<h1 class="display-1">Display 1</h1>
<h1 class="display-2">Display 2</h1>
<h1 class="display-3">Display 3</h1>
<h1 class="display-4">Display 4</h1>
<h1 class="display-5">Display 5</h1>
<h1 class="display-6">Display 6</h1>`;

const leadTextCode = `<p class="lead">
  Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor. Duis mollis, est non commodo luctus.
</p>`;
---

<NoSidebar
  title="Naslovi (Headers)"
  breadcrumbItems={breadcrumbItems}
  bannerTitle="Naslovi"
  bannerSubtitle="Primjeri tipografskih naslova H1-H6 i Display varijanti"
  bannerSize="xs"
>
  <div class="row">
    <div class="col-12">
      <ExampleSnippet
        title="Standardni Naslovi"
        description="Svi HTML naslovi, od <h1> do <h6>, su dostupni."
        code={standardHeadingsCode}
      />

      <ExampleSnippet
        title="Naslovi sa sekundarnim tekstom"
        description="Koristite <small> tag ili .text-muted klasu za dodatni tekst."
        code={secondaryTextCode}
      />

      <ExampleSnippet
        title="Display Naslovi"
        description="Kada vam je potreban naslov koji se ističe, koristite display klase za veći, 'mišljeniji' stil fonta."
        code={displayHeadingsCode}
      />

      <ExampleSnippet
        title="Lead Tekst"
        description="Istaknite paragraf dodavanjem .lead klase."
        code={leadTextCode}
      />
    </div>
  </div>
</NoSidebar>
